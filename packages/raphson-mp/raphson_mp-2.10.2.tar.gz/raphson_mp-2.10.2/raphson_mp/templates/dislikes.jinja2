{% set title = gettext("Dislikes") %}
{% set back_url = "/" %}
{% extends "base_static.jinja2" %}

{% block content %}

<table class="table">
    <thead>
        <tr>
            <th>{% trans %}Playlist{% endtrans %}</th>
            <th>{% trans %}Track{% endtrans %}</th>
            <th>{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
        {% for track in tracks %}
            <tr>
                <td>{{ track.playlist }}</td>
                <td>{{ track.display_title() }}</td>
                <td>
                    <form action="/dislikes/remove" method="POST">
                        <input type="hidden" name="csrf" value="{{ user.csrf }}">
                        <input type="hidden" name="track" value="{{ track.path }}">
                        <input type="submit" value="{% trans %}Undo{% endtrans %}">
                    </form>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock content %}
