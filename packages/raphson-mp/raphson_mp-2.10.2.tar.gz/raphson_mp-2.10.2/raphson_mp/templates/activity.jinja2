{% set title = gettext("Activity") %}
{% set back_url = "/" %}
{% set styles = ["activity"] %}
{% set script = "activity" %}
{% extends "base_static.jinja2" %}

{% block content %}

<h2>{% trans %}Now playing{% endtrans %}</h2>

<div id="now-playing"></div>

<h2>{% trans %}Playback history{% endtrans %}</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                {% trans %}Time{% endtrans %}
            </th>
            <th>
                {% trans %}User{% endtrans %}
            </th>
            <th>
                {% trans %}Playlist{% endtrans %}
            </th>
            <th>
                {% trans %}Track{% endtrans %}
            </th>
        </tr>
    </thead>
    <tbody id="tbody-history">
        {% for timestamp, username, playlist, track in initial_play_data %}
            <tr>
                <td class="format-timestamp">{{ timestamp }}</td>
                <td>{{ username }}</td>
                <td>{{ playlist }}</td>
                <td>{{ track }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<br>
<a href="/activity/all">{% trans %}View more{% endtrans %}</a>

<h2>{% trans %}Recent file changes{% endtrans %}</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                {% trans %}Time{% endtrans %}
            </th>
            <th>
                {% trans %}User{% endtrans %}
            </th>
            <th>
                {% trans %}Action{% endtrans %}
            </th>
            <th>
                {% trans %}Track{% endtrans %}
            </th>
        </tr>
    </thead>
    <tbody id="tbody-changes">
        {% for timestamp, username, action, track in initial_file_data %}
            <tr>
                <td class="format-timestamp">{{ timestamp }}</td>
                <td>{{ username }}</td>
                <td>{{ action }}</td>
                <td>{{ track }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<br>
<a href="/activity/files">{% trans %}View more{% endtrans %}</a>

{% endblock content %}
