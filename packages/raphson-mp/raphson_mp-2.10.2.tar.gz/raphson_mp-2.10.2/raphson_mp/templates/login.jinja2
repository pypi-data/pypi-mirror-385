{% set title = gettext("Log in") %}
{% set script = "login" %}
{% set styles = ["login"] %}
{% extends "base_static.jinja2" %}

{% block content %}

<img src="/static/img/raphson_small.webp" width="128" height="128">

<div>
    <form method="POST">
        {% if invalid_password %}
            <p class="invalid-password">{% trans %}Invalid username or password{% endtrans %}</p>
        {% endif %}
        <label for="username">
            <div>{% trans %}Username{% endtrans %}</div>
            <input type="text" name="username" id="username" autofocus>
        </label>
        <label for="password">
            <div>{% trans %}Password{% endtrans %}</div>
            <input type="password" name="password" id="password">
        </label>
        <div>
            <input type="submit" value="{% trans %}Log in{% endtrans %}">
        </div>
    </form>
    <hr>
    <button id="webauthn-login">WebAuthn Login</button>
</div>

<div hidden id="webauthn-challenge">{{ webauthn_challenge }}</div>

{% endblock content %}
