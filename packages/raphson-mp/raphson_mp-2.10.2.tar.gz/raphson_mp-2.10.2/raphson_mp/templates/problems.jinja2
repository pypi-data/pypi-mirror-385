{% set title = gettext("Reported tracks") %}
{% set back_url = "/" %}
{% extends "base_static.jinja2" %}

{% block content %}

{% if tracks %}
    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}File{% endtrans %}</th>
                <th>{% trans %}Track{% endtrans %}</th>
                <th>{% trans %}Undo{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for track in tracks %}
                <tr>
                    <td>{{ track.path }}</td>
                    <td>{{ track.display_title() }}</td>
                    <td>
                        <form method="POST" action="/problems/undo">
                            <input type="hidden" name="csrf" value="{{ user.csrf }}">
                            <input type="hidden" name="path" value="{{ track.path }}">
                            <input type="submit" value="{% trans %}Undo{% endtrans %}">
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    {% trans %}No tracks with reported problems.{% endtrans %}
{% endif %}

{% endblock content %}
