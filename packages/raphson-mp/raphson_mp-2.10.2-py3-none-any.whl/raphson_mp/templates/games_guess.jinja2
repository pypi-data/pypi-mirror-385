{% set title = gettext("Guessing game") %}
{% set back_url = "/" %}
{% set script = "games_guess" %}
{% set styles = ["games_guess"] %}
{% extends "base_static.jinja2" %}

{% block content %}

<div class="boxes">
    <div id="playlists" class="box padding">
    </div>

    <div id="instructions" class="box">
        <span id="loading-text">{% trans %}Loading{% endtrans %}</span>
        <span hidden id="start-text">{% trans %}Click to start{% endtrans %}</span>
        <span hidden id="reveal-text">{% trans %}Click to reveal{% endtrans %}</span>
        <span hidden id="next-text">{% trans %}Click for next track{% endtrans %}</span>
    </div>

    <div id="cover-container" class="box">
        <div id="cover"></div>
    </div>

    <div id="details" class="box">

    </div>
</div>

<audio id="audio"></audio>

{% endblock content %}
