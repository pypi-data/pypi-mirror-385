{% set title = gettext("Playlist statistics") %}
{% set back_url = "/" %}
{% extends "base_static.jinja2" %}

{% block content %}

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th colspan="2">
                {% trans %}Number of{% endtrans %}
            </th>
            <th colspan="2">
                {% trans %}Song duration{% endtrans %}
            </th>
            <th colspan="6">
                {% trans %}Metadata{% endtrans %}
            </th>
            <th colspan="3">
                {% trans %}Date of{% endtrans %}
            </th>
        </tr>
        <tr>
            <th>{% trans %}Name{% endtrans %}</th>
            <th>{% trans %}Tracks{% endtrans %}</th>
            <th>{% trans %}Artists{% endtrans %}</th>
            <th>{% trans %}Total{% endtrans %}</th>
            <th>{% trans %}Mean{% endtrans %}</th>
            <th>{% trans %}Title{% endtrans %}</th>
            <th>{% trans %}Album{% endtrans %}</th>
            <th>{% trans %}Album artist{% endtrans %}</th>
            <th>{% trans %}Year{% endtrans %}</th>
            <th>{% trans %}Artist{% endtrans %}</th>
            <th>{% trans %}Tag{% endtrans %}</th>
            <th>{% trans %}Most recent choice{% endtrans %}</th>
            <th>{% trans %}Most recent modification{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
        {% for stats in playlists_stats %}
            {% if stats.track_count > 0 %}
                <tr>
                    <td>{{ stats.name }}</td>
                    <td>{{ stats.track_count }}</td>
                    <td>{{ stats.artist_count }}</td>
                    <td class="format-duration">{{ stats.total_duration }}</td>
                    <td class="format-duration">{{ stats.mean_duration }}</td>
                    <td>{{ stats.has_title_count }}</td>
                    <td>{{ stats.has_album_count }}</td>
                    <td>{{ stats.has_album_artist_count }}</td>
                    <td>{{ stats.has_year_count }}</td>
                    <td>{{ stats.has_artist_count }}</td>
                    <td>{{ stats.has_tag_count }}</td>
                    <td class="format-timestamp">{{ stats.most_recent_choice }}</td>
                    <td class="format-timestamp">{{ stats.most_recent_mtime }}</td>
                </tr>
            {% endif %}
        {% endfor %}
    </tbody>
</table>

{% endblock content %}
