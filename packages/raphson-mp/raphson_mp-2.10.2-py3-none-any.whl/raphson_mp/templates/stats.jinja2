{% set title = gettext("Statistics") %}
{% set back_url = "/" %}
{% set script = "stats" %}
{% set styles = ["stats"] %}
{% extends "base_static.jinja2" %}

{% block content %}

<div id="buttons">
    <button data-period="day">{% trans %}Day{% endtrans %}</button>
    <button data-period="week">{% trans %}Week{% endtrans %}</button>
    <button data-period="this_month">{% trans %}This month{% endtrans %}</button>
    <button data-period="last_month">{% trans %}Last month{% endtrans %}</button>
    {% for year in years %}
        <button data-period="{{ year }}">{{ year }}</button>
    {% endfor %}
    <button data-period="all">{% trans %}All time{% endtrans %}</button>
</div>

<br>

{% for i in range(chart_count) %}
    <div data-id="{{ i }}" class="chart box padding"></div>
{% endfor %}

{% endblock content %}
