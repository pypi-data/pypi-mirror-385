{% extends "base.jinja2" %}

{% block body %}
<div class="dither"></div>

<div class="flex-hcenter">
    <main class="padding">
        <div class="page-heading">
            {% if back_url is defined %}
                {% if back_url == "close" %}
                    {{ icon_button('close', id='page-heading-close') }}
                {% else %}
                    <a href="{{ back_url }}">
                        {{ icon_button('arrow-left') }}
                    </a>
                {% endif %}
            {% endif %}
            <h1>{{ title }}</h1>
        </div>

        {% block content %}{% endblock content %}
    </main>
</div>
{% endblock body %}
