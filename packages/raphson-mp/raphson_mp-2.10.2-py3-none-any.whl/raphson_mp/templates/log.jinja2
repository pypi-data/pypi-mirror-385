{% set title = gettext("Log viewer") %}
{% set back_url = "/" %}
{% set styles = ["log"] %}
{% set script = "log" %}
{% extends "base_static.jinja2" %}

{% block content %}

<div class="buttons">
    <form action="/log/clear">
        <input type="submit" value="{% trans %}Clear log file{% endtrans %}" {% if not log_content %}disabled{% endif %}>
    </form>

    <button id="scroll-button">{% trans %}Scroll to bottom{% endtrans %}</button>
</div>

{% if error %}
    <p>{{ error }}</p>
{% endif %}

<br>

{% if log_content %}
    <div class="logbox">{{ log_content }}</div>
{% endif %}

{% endblock content %}
