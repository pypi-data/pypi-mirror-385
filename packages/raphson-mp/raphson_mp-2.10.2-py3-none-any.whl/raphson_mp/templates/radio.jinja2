{% set title = gettext("Radio") %}
{% set back_url = "/" %}
{% set script = "radio" %}
{% set styles = ["radio"] %}
{% extends "base_static.jinja2" %}

{% block content %}

<div class="boxes">
    <img id="image" class="box">

    <div class="box padding" id="controls">
        <div class="flex-vcenter">
            {{ icon_button('play', id='play') }}
        </div>

        <div>
            Status: <span id="status"></span><br>
            Current: <span id="current"></span><br>
            Next: <span id="next"></span>
        </div>
    </div>

    <div id="lyrics" class="box padding"></div>
</div>

<audio id="audio"></audio>

{% endblock content %}
