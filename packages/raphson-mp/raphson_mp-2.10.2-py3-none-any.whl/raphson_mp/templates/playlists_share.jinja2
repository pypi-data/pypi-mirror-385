{% set title = gettext("Share playlist edit access") %}
{% set back_url = "/playlist/manage" %}
{% extends "base_static.jinja2" %}

{% block content %}

<p>{% trans %}Give someone else edit access to the playlist: '{{ playlist }}'{% endtrans %}</p>
<br>

<form method="POST">
    <input type="hidden" name="csrf" value="{{ user.csrf }}">
    <input type="hidden" name="playlist" value="{{ playlist }}" readonly>
    <select name="username">
        {% for username in usernames %}
            <option value="{{ username }}">{{ username }}</option>
        {% endfor %}
    </select>
    <input type="submit" value="{% trans %}Share{% endtrans %}">
</form>

{% endblock content %}
