{% set title = track %}
{% if share_track_count > 1 %}
    {% set back_url = '/share/' + share_code%}
{% else %}
    {% set back_url = None %}
{% endif %}
{% set scripts = [] %}
{% set styles = ["share"] %}
{% extends "base_static.jinja2" %}

{% block content %}

<div class="boxes">
    <div class="box padding" id="player">
        <audio controls preload="metadata">
            <source src="/share/{{ share_code }}/{{ track_code }}/audio" type="audio/webm">
        </audio>

        <div>
            <a href="/share/{{ share_code }}/{{ track_code }}/download/original" class="button icon-text-button">
                <span class="icon icon-download"></span>
                <span>{% trans %}Original{% endtrans %}</span>
            </a>

            <a href="/share/{{ share_code }}/{{ track_code }}/download/mp3" class="button icon-text-button">
                <span class="icon icon-download"></span>
                <span>{% trans %}MP3{% endtrans %}</span>
            </a>
        </div>

    </div>

    <img class="box cover-img" src="/share/{{ share_code }}/{{ track_code }}/cover">

    {# Ugly formatting here, because line breaks are preserved #}
    {% if lyrics %}
        <div class="box padding lyrics">{{ lyrics }}</div>
    {% endif %}
</div>

{% endblock content %}
