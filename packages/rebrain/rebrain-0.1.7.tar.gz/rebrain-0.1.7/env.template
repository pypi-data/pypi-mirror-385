GEMINI_API_KEY=your_gemini_api_key_here

# GEMINI_MODEL is optional (defaults to gemini-2.5-flash-lite)
# Can be overridden per-task by prompt template metadata.model_recommendation
# Example: persona_synthesis.yaml uses gemini-2.5-flash for higher quality
GEMINI_MODEL=gemini-2.5-flash-lite

GEMINI_EMBEDDING_MODEL=gemini-embedding-001
GEMINI_EMBEDDING_DIMENSION=768

