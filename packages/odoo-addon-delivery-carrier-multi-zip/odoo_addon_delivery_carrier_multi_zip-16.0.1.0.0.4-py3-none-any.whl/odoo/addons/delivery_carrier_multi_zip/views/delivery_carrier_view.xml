<odoo>
    <record id="view_delivery_carrier_form" model="ir.ui.view">
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">
            <field name="zip_prefix_ids" position="before">
                <field
                    name="zip_option"
                    widget="radio"
                    options="{'horizontal': true}"
                />
            </field>
            <field name="zip_prefix_ids" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('zip_option','!=','prefix')]}</attribute>
            </field>
            <field name="zip_prefix_ids" position="after">
                <field
                    name="zip_range_ids"
                    attrs="{'invisible': [('zip_option','!=', 'range')]}"
                >
                    <tree editable="bottom" default_order="zip_from, zip_to">
                        <field name="zip_from" />
                        <field name="zip_to" />
                    </tree>
                </field>
            </field>
        </field>
    </record>
</odoo>
