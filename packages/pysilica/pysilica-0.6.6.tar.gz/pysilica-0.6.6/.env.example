# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Conversation Compaction Settings
# Ratio of context window at which to trigger compaction (0.0-1.0)
# Default: 0.65 (triggers at 65% of context window, ~130K tokens for Claude 3.5 Sonnet)
# SILICA_COMPACTION_THRESHOLD=0.65

# Enable detailed debug output for compaction checks
# SILICA_DEBUG_COMPACTION=1

# Silica Cron Configuration
ENVIRONMENT=dev
DEBUG=true

# Application Settings
HOST=127.0.0.1
PORT=8080
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=./logs

# S3 Configuration for Litestream
S3_BUCKET=silica-cron-ls
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-west-2

# Litestream Configuration (disabled by default in dev)
# LITESTREAM_ENABLED=true