    doc_dir="/path/to/docs",
    model="v3_chat",
    agentic=False,  # ä½¿ç”¨ LongContextRAG
    product_mode="lite",  # lite æ¨¡å¼
    timeout=600,  # å…¨å±€è¶…æ—¶10åˆ†é’Ÿ
    rag_context_window_limit=56000,
    enable_hybrid_index=True,
)

