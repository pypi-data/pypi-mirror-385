# 包含必要的文件
include README.md
include LICENSE
include pyproject.toml

# 包含包数据
recursive-include jettask *.py
recursive-include jettask *.sql
recursive-include jettask/webui/frontend/src *.jsx *.js *.css
include jettask/webui/frontend/package.json
include jettask/webui/frontend/vite.config.js
include jettask/webui/frontend/index.html
include jettask/webui/frontend/.eslintrc.json

# 排除不必要的文件
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .git*
global-exclude .DS_Store
global-exclude *.swp
global-exclude *~

# 排除不必要的目录
prune tests
prune docs
prune examples
prune lib_reference
prune docker
prune jettask/webui/frontend/node_modules
prune jettask/webui/frontend/dist
prune jettask/webui/static