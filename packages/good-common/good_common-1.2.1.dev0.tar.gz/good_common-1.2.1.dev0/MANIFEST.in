# Include important files
include README.md
include LICENSE
include pyproject.toml
include setup.py
include setup_hybrid.py

# Include Cython source files
recursive-include src *.pyx
recursive-include src *.pxd

# Include generated C files for users without Cython
recursive-include src *.c

# Include the compiled extensions if they exist
recursive-include src *.so
recursive-include src *.pyd

# Exclude build artifacts
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude build *
recursive-exclude dist *

# Include test files for development
recursive-include tests *.py

# Include benchmark and build scripts
recursive-include scripts *.py
recursive-include scripts *.sh