{
  "assistants": [
    {
      "name": "{ASSISTANT_NAME}",
      "id": "{ASSISTANT_IDENTIFIER}",
      "description": "Advanced assistant with full features created with Scout CLI",
      "instructions_path": "system_prompt.md",
      "allowed_functions": ["all"], 
      "use_system_prompt": true,
      "prompt_starters_path": [
        "conversation_starters.md"
      ],
      "assistant_files": [
        {
          "filepath": "data.txt",
          "description": "Assistant data file for context and information"
        }
      ],
      "avatar_path": "avatar.jpeg",
      "visibility_type": "private",
      "package_info": {
        "package_path": "functions",
        "package_file_name": "{ASSISTANT_IDENTIFIER}_functions.zip"
      }
    }
  ]
}