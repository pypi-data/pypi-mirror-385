[
  {
    "type": "PubMedTool",
    "name": "PubMed_search_articles",
    "description": "Search PubMed using NCBI E-utilities (esearch + esummary) and return articles. Returns articles with title, journal, year, DOI, and PubMed URL.",
    "parameter": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "Search query for PubMed articles. Use keywords separated by spaces to refine your search."
        },
        "limit": {
          "type": "integer",
          "description": "Number of articles to return. This sets the maximum number of articles retrieved from PubMed.",
          "default": 10
        },
        "api_key": {
          "type": "string",
          "description": "Optional NCBI API key for higher rate limits. Get your free key at https://www.ncbi.nlm.nih.gov/account/"
        }
      },
      "required": [
        "query"
      ]
    },
    "return_schema": {
      "type": "array",
      "description": "List of PubMed articles matching the search query",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the article"
          },
          "abstract": {
            "type": "string",
            "description": "Abstract of the article (not available from PubMed API)"
          },
          "authors": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of author names"
          },
          "journal": {
            "type": "string",
            "description": "Journal name where the article was published"
          },
          "year": {
            "type": "integer",
            "description": "Publication year"
          },
          "doi": {
            "type": "string",
            "description": "Digital Object Identifier (if available)"
          },
          "url": {
            "type": "string",
            "description": "URL to the article on PubMed"
          },
          "citations": {
            "type": "integer",
            "description": "Number of citations (not available from PubMed API)"
          },
          "open_access": {
            "type": "boolean",
            "description": "Open access status (not available from PubMed API)"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of MeSH keywords"
          },
          "article_type": {
            "type": "string",
            "description": "Type of article"
          },
          "source": {
            "type": "string",
            "description": "Source identifier (always 'PubMed')"
          },
          "data_quality": {
            "type": "object",
            "description": "Data quality indicators",
            "properties": {
              "has_abstract": {
                "type": "boolean"
              },
              "has_authors": {
                "type": "boolean"
              },
              "has_journal": {
                "type": "boolean"
              },
              "has_year": {
                "type": "boolean"
              },
              "has_doi": {
                "type": "boolean"
              },
              "has_citations": {
                "type": "boolean"
              },
              "has_keywords": {
                "type": "boolean"
              },
              "has_url": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "test_examples": [
      {
        "query": "cancer research",
        "limit": 2
      },
      {
        "query": "COVID-19",
        "limit": 1
      }
    ]
  }
]
