        "association_count": {"type": "integer"},
        "associations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "study": {"type": "string"},
              "strongestRiskAllele": {"type": "string"},
              "pvalue": {"type": "number"}
            }
          }
        },
        "total_found": {"type": "integer"}
      }
    }
  }
]
