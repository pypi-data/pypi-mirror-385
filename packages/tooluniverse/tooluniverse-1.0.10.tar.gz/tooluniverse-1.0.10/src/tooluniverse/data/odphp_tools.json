  {
    "name": "odphp_outlink_fetch",
    "description": "This tool retrieves readable text from ODPHP article links and information sources. This is helpful after using the `odphp_myhealthfinder` or `odphp_topicsearch` tools or when the user wants to simply dive deeper into ODPHP data.",
    "type": "ODPHPOutlinkFetch",
    "parameter": {
      "type": "object",
      "properties": {
        "urls": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "1–3 absolute URLs from AccessibleVersion or RelatedItems.Url"
        },
        "max_chars": {
          "type": "integer",
          "description": "Optional hard cap on extracted text length (e.g., 5000)"
        },
        "return_html": {
          "type": "boolean",
          "description": "If true, also return minimally cleaned HTML"
        }
      },
      "required": [
        "urls",
        "max_chars",
        "return_html"
      ]
    },
    "fields": {
      "endpoint": "/outlink",
      "return_format": "JSON"
    },
    "return_schema": {
      "type": "object",
      "properties": {
        "results": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string"
              },
              "status": {
                "type": "integer"
              },
              "content_type": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "text": {
                "type": "string"
              },
              "html": {
