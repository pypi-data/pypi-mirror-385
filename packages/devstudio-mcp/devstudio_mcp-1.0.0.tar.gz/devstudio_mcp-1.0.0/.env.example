# DevStudio MCP Server Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Keys (Required for AI features)
# =============================================================================

# OpenAI API key for transcription and content generation
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API key for Claude integration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google API key for Gemini integration
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Server Configuration
# =============================================================================

# Server host and port
SERVER_HOST=localhost
SERVER_PORT=3000
SERVER_NAME=devstudio-mcp
SERVER_VERSION=1.0.0

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MCP_LOG_LEVEL=INFO

# =============================================================================
# Recording Configuration
# =============================================================================

# Output directory for recordings (absolute or relative path)
RECORDING_OUTPUT_DIR=./recordings

# Maximum recording duration in seconds (default: 1 hour)
MAX_RECORDING_DURATION=3600

# Supported recording formats (comma-separated)
RECORDING_FORMATS=mp4,webm,avi

# Recording quality (low, medium, high)
RECORDING_QUALITY=medium

# =============================================================================
# Storage Configuration
# =============================================================================

# Storage type: local, s3, gcs
STORAGE_TYPE=local

# For cloud storage (S3/GCS)
STORAGE_BUCKET=your_bucket_name
STORAGE_REGION=us-west-2

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Prometheus metrics endpoint
METRICS_ENABLED=true
METRICS_PORT=8000

# Grafana dashboard password
GRAFANA_PASSWORD=admin

# =============================================================================
# Production Configuration
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# MinIO configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable specific features
FEATURE_SCREEN_RECORDING=true
FEATURE_AUDIO_RECORDING=true
FEATURE_TERMINAL_MONITORING=true
FEATURE_AI_TRANSCRIPTION=true
FEATURE_CONTENT_GENERATION=true

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug mode (only for development)
DEBUG=false