{
  "_meta": {
    "@CODE:CONFIG-STRUCTURE-001": "@DOC:JSON-CONFIG-001",
    "@SPEC:PROJECT-CONFIG-001": "@SPEC:MOAI-CONFIG-001"
  },
  "moai": {
    "version": "{{MOAI_VERSION}}"
  },
  "constitution": {
    "enforce_tdd": true,
    "principles": {
      "simplicity": {
        "max_projects": 5,
        "notes": "기본 권장값. 프로젝트 규모에 따라 .moai/config.json 또는 SPEC/ADR로 근거와 함께 조정하세요."
      }
    },
    "require_tags": true,
    "simplicity_threshold": 5,
    "test_coverage_target": 85
  },
  "git_strategy": {
    "personal": {
      "auto_checkpoint": "event-driven",
      "checkpoint_events": [
        "delete",
        "refactor",
        "merge",
        "script",
        "critical-file"
      ],
      "checkpoint_type": "local-branch",
      "max_checkpoints": 10,
      "cleanup_days": 7,
      "push_to_remote": false,
      "auto_commit": true,
      "branch_prefix": "feature/",
      "develop_branch": "develop",
      "main_branch": "main"
    },
    "team": {
      "auto_pr": true,
      "develop_branch": "develop",
      "draft_pr": true,
      "feature_prefix": "feature/SPEC-",
      "main_branch": "main",
      "use_gitflow": true
    }
  },
  "pipeline": {
    "available_commands": [
      "/alfred:0-project",
      "/alfred:1-spec",
      "/alfred:2-build",
      "/alfred:3-sync"
    ],
    "current_stage": "initialized"
  },
  "project": {
    "created_at": "{{CREATION_TIMESTAMP}}",
    "description": "{{PROJECT_DESCRIPTION}}",
    "initialized": true,
    "locale": "ko",
    "mode": "{{PROJECT_MODE}}",
    "name": "{{PROJECT_NAME}}",
    "moai_adk_version": "{{MOAI_VERSION}}",
    "optimized": false
  },
  "tags": {
    "auto_sync": true,
    "storage_type": "code_scan",
    "categories": [
      "REQ",
      "DESIGN",
      "TASK",
      "TEST",
      "FEATURE",
      "API",
      "UI",
      "DATA"
    ],
    "code_scan_policy": {
      "no_intermediate_cache": true,
      "realtime_validation": true,
      "scan_tools": ["rg", "grep"],
      "scan_command": "rg '@TAG' -n",
      "philosophy": "TAG의 진실은 코드 자체에만 존재"
    }
  }
}