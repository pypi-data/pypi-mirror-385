include README.md
include LICENSE
include Pipfile
include Pipfile.lock

# Include all package data
recursive-include d_fake_seeder/images *
recursive-include d_fake_seeder/ui *
recursive-include d_fake_seeder/config *
recursive-include d_fake_seeder/locale *
recursive-include d_fake_seeder/domain/config *

# Include desktop files
include d_fake_seeder/*.desktop
include d_fake_seeder/*.desktop.template

# Exclude Python bytecode and cache
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
