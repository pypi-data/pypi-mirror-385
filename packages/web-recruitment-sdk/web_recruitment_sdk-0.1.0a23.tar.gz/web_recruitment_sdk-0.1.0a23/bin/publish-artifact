#!/usr/bin/env bash

set -eux
mkdir -p dist
rye build --clean
# Patching importlib-metadata version until upstream library version is updated
# https://github.com/pypa/twine/issues/977#issuecomment-2189800841
"$HOME/.rye/self/bin/python3" -m pip install 'importlib-metadata==7.2.1' keyring keyrings.google-artifactregistry-auth
"$HOME/.rye/self/bin/python3" -m pip install --upgrade twine
"$HOME/.rye/self/bin/python3" -m twine upload \
  --repository-url https://$REGISTRY \
  dist/*