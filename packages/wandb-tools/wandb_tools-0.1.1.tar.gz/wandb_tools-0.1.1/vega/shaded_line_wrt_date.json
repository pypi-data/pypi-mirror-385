{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple line plot",
  "data": {
    "name": "wandb"
  },
  "transform": [
    {"filter": {"field": "${field:x}", "valid": true}},
    {"filter": {"field": "${field:y}", "valid": true}},
    {
      "calculate": "if('name' === ''  || datum['name'] === '', false, true)",
      "as": "grouped"
    },
    {
      "calculate": "if('name' === ''  || datum['name'] === '', datum.name, datum['name'])",
      "as": "newGroupKeys"
    },
    {
      "calculate": "if('name' === ''  || datum['name'] === '', datum.color, datum['name'])",
      "as": "color"
    },
  {
    "aggregate": [
      {
        "op": "average",
        "field": "${field:y}",
        "as": "${field:y}"
      },
      {
        "op": "stdev",
        "field": "${field:y}",
        "as": "stdev_${field:y}"
      }
    ],
    "groupby": ["${field:x}", "newGroupKeys", "color", "grouped"]
  }
],
  "title": "${string:title}",
  "encoding":{
        "x": {
          "field": "${field:x}",
          "type": "temporal",
          "timeUnit": "yearmonthdate",
          "title": "date"
        }
  },
  "layer": [
    {
      "transform": [
        {"filter": "datum.grouped == false"}
      ],

      
      "encoding": {
        "color": {
            "field": "newGroupKeys",
            "type": "nominal",
            "scale": {"range": {"field": "color"}},
            "legend": {"title": null}
        },
        "y": {
          "field": "${field:y}",
          "type": "quantitative"
        }
      },
      "layer": [
        {
          "selection": {
            "grid": {
              "type": "interval",
              "bind": "scales"
            }
          },
          "mark": "line",
          "encoding": {
            "size": {
              "value": 1.5
            }
          }
        },
        {
          "transform": [
            {
              "filter": {
                "selection": "hover"
              }
            }
          ],
          "mark": "point"
        }
      ]
    },
    {
      "transform": [
        {"filter": "datum.grouped == true"}
      ],
      "encoding": {
        "color": {
          "field": "newGroupKeys",
          "type": "nominal",
          "scale": {"range": "category"},
          "legend": {"title": null}
          },
        "y": {
          "field": "${field:y}",
          "type": "quantitative",
          "title": "${string:y_title}"
        }
      },
      "layer": [
        {
          "mark": "area",
          "encoding": {
            "y": {
              "field": "upper"
            },
            "y2": {
              "field": "lower"
            },
            "opacity": {"value": 0.2}
          },
          "transform": [
        {
          "calculate": "datum['${field:y}'] + datum['stdev_${field:y}']",
          "as": "upper"
        },
        {
          "calculate": "datum['${field:y}'] - datum['stdev_${field:y}']",
          "as": "lower"
        }
      ]
        },
        {
          "mark": "line",
          "encoding": {
            "size": {
              "value": 1.5
            }
          }
        },
        {
          "selection": {
            "grid1": {
              "type": "interval",
              "bind": "scales"
            }
          },
          "mark": "point",
          "encoding": {
            "size": {
              "value": 5.5
            }
          }
        },
        {
          "transform": [
            {
              "filter": {
                "selection": "hover"
              }
            }
          ],
          "mark": "point"
        }
      ]
    },  
    {
      "transform": [
        {
          "pivot": "newGroupKeys",
          "value": "${field:y}",
          "groupby": [
            "${field:x}"
          ],
          "op": "average"
        }
      ],
      "mark": {
        "type": "rule",
        "tooltip": {
          "content": "data"
        }
      },
      "encoding": {
        "opacity": {
          "condition": {
            "value": 0.3,
            "selection": "hover"
          },
          "value": 0
        }
      },
      "selection": {
        "hover": {
          "type": "single",
          "fields": [
            "${field:x}"
          ],
          "nearest": true,
          "on": "mouseover",
          "empty": "none",
          "clear": "mouseout"
        }
      }
    }
  ],
  "resolve": {"scale": {"color": "independent"}}
}