# Include documentation files
include README.md
include LICENSE
include CHANGELOG.md
include METRICS_OPTIMIZATION.md

# Include configuration files
include requirements.txt
include pyproject.toml
include setup.py

# Include package data
recursive-include seetrain *.yaml
recursive-include seetrain *.yml
recursive-include seetrain *.json
recursive-include seetrain *.txt
recursive-include seetrain *.md

# Include examples and tests
recursive-include examples *.py
recursive-include examples *.md
recursive-include tests *.py
recursive-include tests *.json

# Exclude unnecessary files
exclude *.pyc
exclude *.pyo
exclude *.pyd
exclude __pycache__
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * *.dylib
recursive-exclude * *.dll

# Exclude development files
exclude .gitignore
exclude .gitattributes
exclude .github
exclude .vscode
exclude .idea
exclude *.log
exclude .pytest_cache
exclude .coverage
exclude htmlcov
exclude .mypy_cache
exclude .tox
exclude venv
exclude env
exclude .env

# Exclude build artifacts
exclude build
exclude dist
exclude *.egg-info
recursive-exclude * *.egg-info
