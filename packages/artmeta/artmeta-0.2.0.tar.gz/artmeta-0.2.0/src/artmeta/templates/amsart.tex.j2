{# Template Jinja2 pour la classe amsart #}
\title{{ '{' }}{{ meta.title }}{{ '}' }}
{% if meta.title_short %}
\shorttitle{{ '{' }}{{ meta.title_short }}{{ '}' }}
{% endif %}

{# Auteurs #}
{% for author in meta.authors %}

\author{{ '{' }}{{ author.firstname }} {{ author.lastname }}{{ '}' }}
{% if author.affiliations %}
{% for affil_id in author.affiliations %}
{% set affil = affiliations[affil_id] %}
\address{{ '{' }}{{ affil.name }}{% if affil.institution %}, {{ affil.institution }}{% endif %}{% if affil.city %}, {{ affil.city }}{% endif %}{% if affil.country %}, {{ affil.country }}{% endif %}{{ '}' }}
{% endfor %}
{% endif %}
{% if author.email %}
\email{{ '{' }}{{ author.email }}{{ '}' }}
{% endif %}
{% if author.orcid %}
% ORCID: {{ author.orcid }}
{% endif %}
{% endfor %}

{# Abstract #}
{% if meta.abstract %}

\begin{abstract}
{{ meta.abstract }}
\end{abstract}
{% endif %}

{# Keywords #}
{% if meta.keywords %}

\keywords{{ '{' }}{{ meta.keywords|join(', ') }}{{ '}' }}
{% endif %}

{# MSC codes #}
{% if meta.msc_codes %}

\subjclass[2020]{{ '{' }}{{ meta.msc_codes|join(', ') }}{{ '}' }}
{% endif %}

\maketitle
