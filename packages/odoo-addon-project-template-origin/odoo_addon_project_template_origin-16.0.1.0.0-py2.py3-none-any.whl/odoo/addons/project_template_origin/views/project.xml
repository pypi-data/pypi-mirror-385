<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View - Add project_template_id field to settings tab -->
    <record id="project_template_origin_view_form" model="ir.ui.view">
        <field name="name">project.template.origin.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='settings']//group[@name='extra_settings']" position="inside">
                <field name="project_template_id" readonly="1" string="Project Template Origin" />
            </xpath>
        </field>
    </record>
</odoo>
