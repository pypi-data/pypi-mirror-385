/* Root screen layout */

Screen {
    background: black;
    layout: grid;
    grid-size: 2;
    grid-columns: 2fr 7fr;
    grid-rows: 13fr 1fr;
    grid-gutter: 0 1; }

Clock {
    height: 3;
    padding: 0 2;
    border: round #0c323e;
    align: center middle;
    background: black; }

