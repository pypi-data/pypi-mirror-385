    background: black;
}

.hashrate_plot {
    background: black;
}

#hashrate_plot {
    background: black;
}

PlotWidget {
    background: black;
}

NavPane {
    height: 9fr;
    padding: 0 2;
    border: round #0c323e;
    background: black; }

RadioButton {
    color: #31b8e6; }

Select {
    width: 20; }

TopBar {
    height: 3;
    padding: 0 2;
    border: round #0c323e;
    dock: top;
    background: black }

