/* Radio Button Width */

.radio_button_type {
    height: 1;
    width: 40;
    background: black;
    padding: 0;
    margin: 0;
    border: none;
}

.radio_button_type:focus,
.radio_button_type:hover {
    height: 1;
    padding: 0;
    margin: 0;
}

.radio_set {
    border: round #0c323e;
    border-subtitle-color: #31b8e6;
    border-subtitle-style: bold;
