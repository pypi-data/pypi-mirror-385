# Pingera API Configuration
# Use either API Key OR JWT Token (JWT Token takes precedence if both are set)
PINGERA_API_KEY=your_api_key_here
# PINGERA_JWT_TOKEN=your_jwt_token_here
PINGERA_BASE_URL=https://api.pingera.ru/v1

# Server Configuration
PINGERA_MODE=read_write  # Options: read_only, read_write
PINGERA_SERVER_NAME=Pingera MCP Server

# Transport Configuration (for dual-mode support)
TRANSPORT_MODE=stdio  # Options: stdio (default, for Claude Desktop), sse (for HTTP/web clients)
HTTP_HOST=0.0.0.0  # Host for HTTP mode (use 0.0.0.0 to accept external connections)
HTTP_PORT=5000  # Port for HTTP mode
REQUIRE_AUTH_HEADER=false  # Whether to require Authorization header in HTTP mode

# Request Configuration
PINGERA_TIMEOUT=30
PINGERA_MAX_RETRIES=3

# Logging Configuration
PINGERA_DEBUG=false