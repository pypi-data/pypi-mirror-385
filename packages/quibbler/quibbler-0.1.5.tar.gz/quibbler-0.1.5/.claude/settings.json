{
  "permissions": {
    "allow": [
      "mcp__orchestra-mcp__spawn_subagent",
      "mcp__orchestra-mcp__send_message_to_session"
    ],
    "allowPathRegex": [
      "^~/.orchestra/.*"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "quibbler notify"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "quibbler hook"
          },
          {
            "type": "command",
            "command": "quibbler notify"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "quibbler hook"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "quibbler notify"
          }
        ]
      }
    ]
  }
}