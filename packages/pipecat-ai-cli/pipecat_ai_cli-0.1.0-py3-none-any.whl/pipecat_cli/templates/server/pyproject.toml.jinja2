[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "Voice AI bot built with Pipecat"
requires-python = ">=3.10"
dependencies = [
    "{{ pipecat_dependency }}",
{% if deploy_to_cloud %}
    "pipecatcloud",
{% endif %}
]

[dependency-groups]
dev = [
    "ruff~=0.12.1",
]

[tool.ruff]
line-length = 100
[tool.ruff.lint]
select = ["I"]
