# {{ project.name.upper() }} - Data Science API Configuration

# Application Settings
APP_NAME="{{ project.name }}"
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/{{ project.python_module }}
# Alternative: SQLite for development
# DATABASE_URL=sqlite:///{{ project.python_module }}.db

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Machine Learning Provider APIs
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Model Storage
MODEL_STORAGE_PATH=./models/saved
DATASET_STORAGE_PATH=./data/datasets

# ML Configuration
DEFAULT_MODEL_TYPE=random_forest
MAX_TRAINING_TIME=3600
BATCH_PREDICTION_SIZE=1000

# Background Tasks
TASK_QUEUE_URL=redis://localhost:6379/1
MAX_WORKERS_ML=3
MAX_WORKERS_DATA=2

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=8001

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# External APIs (optional)
WEATHER_API_KEY=your-weather-api-key-here
NEWS_API_KEY=your-news-api-key-here