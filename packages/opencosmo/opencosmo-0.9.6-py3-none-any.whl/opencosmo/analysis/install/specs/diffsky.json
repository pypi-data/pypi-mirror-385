{
	"name": "diffsky",
	"header_version_key": "diffsky_versions",
	"requirements": {
		"diffmah" : {
			"prefer_source": "conda-forge",
			"repo": "https://github.com/ArgonneCPAC/diffmah.git",
			"depends_on": ["jax"]
		},
		"diffsky" : {
			"prefer_source": "conda-forge",
			"repo": "https://github.com/ArgonneCPAC/diffsky.git",
			"depends_on": ["diffmah", "jax", "diffstar", "diffstarpop", "dsps"]
		},
		"diffstar" : {
			"prefer_source": "conda-forge",
			"repo": "https://github.com/ArgonneCPAC/diffstar.git",
			"depends_on" : ["diffmah", "jax"]
		},
		"diffstarpop": {
			"prefer_source": "conda-forge",
			"repo": "https://github.com/ArgonneCPAC/diffstarpop.git",
			"depends_on": ["diffmah", "diffstar", "dsps", "jax"],
			"optional": true

		},
		"dsps" : {
			"prefer_source": "conda-forge",
			"repo": "https://github.com/ArgonneCPAC/dsps.git",
			"depends_on": ["jax"]
		},
		"jax" : {
			"prefer_source": "conda-forge"
		},
		"numpy": {
			"prefer_source": "conda-forge"
		}
	}
}
