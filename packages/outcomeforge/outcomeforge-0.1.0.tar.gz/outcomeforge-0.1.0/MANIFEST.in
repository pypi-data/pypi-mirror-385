# Include documentation
include README.md
include LICENSE

# Include prompt templates
recursive-include prompts *.md

# Include example scripts
recursive-include examples *.sh *.py

# Include test data if needed
# recursive-include tests/fixtures *

# Exclude compiled Python files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so

# Exclude output directories
prune .ai-snapshots
prune .cloned_repos
prune output
prune wiki_output
prune tutorial_output
prune tutorial_examples

# Exclude cache files
exclude llm_cache.json
exclude tutorial_state.json
