# ChunkFlow Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# API Keys
# ============================================================================
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=...
COHERE_API_KEY=...

# For ChunkFlow to use these, they'll be prefixed with CHUNK_FLOW_
CHUNK_FLOW_OPENAI_API_KEY=${OPENAI_API_KEY}
CHUNK_FLOW_GOOGLE_API_KEY=${GOOGLE_API_KEY}

# ============================================================================
# Application Configuration
# ============================================================================
CHUNK_FLOW_LOG_LEVEL=INFO
CHUNK_FLOW_LOG_FORMAT=pretty
CHUNK_FLOW_CONFIG_PATH=config/default.yaml

# Default strategy and provider
CHUNK_FLOW_DEFAULT_STRATEGY=recursive
CHUNK_FLOW_DEFAULT_EMBEDDING_PROVIDER=huggingface

# ============================================================================
# API Server Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# ============================================================================
# Database (Optional - for future enhancement)
# ============================================================================
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=chunkflow
# DB_USER=chunkflow
# DB_PASSWORD=chunkflow

# ============================================================================
# Redis (Optional - for caching)
# ============================================================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
