exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude pytest.ini
exclude mypy.ini
exclude .coverage
exclude coverage.xml
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * *.dylib