# Include documentation files
include README.md
include CHANGELOG.md
include FAQ.md
include LICENSE

# Include example configuration
include api_keys.example.txt

# Include all documentation and guides
recursive-include docs *
recursive-include modules *.py

# Include assets
recursive-include assets *

# Exclude version control
exclude .git
exclude .github
exclude .gitignore

# Exclude cache and compiled files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude .pytest_cache

# Exclude private data and development files
exclude-dir user\ data_private
exclude-dir .dev
exclude-dir tests
