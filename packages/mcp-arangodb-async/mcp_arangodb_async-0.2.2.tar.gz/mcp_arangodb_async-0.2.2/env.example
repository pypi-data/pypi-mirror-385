# Environment variables for docker-compose and local dev
# Copy this file to .env (kept untracked by .gitignore) and adjust values.

# ArangoDB root password used by the Docker container
ARANGO_ROOT_PASSWORD=changeme

# Optional: standard app variables (used by README/quickstarts)
ARANGO_URL=http://localhost:8529
ARANGO_DB=mcp_arangodb_test
ARANGO_USERNAME=mcp_arangodb_user
ARANGO_PASSWORD=mcp_arangodb_password

# Optional: tuning
ARANGO_CONNECT_RETRIES=10
ARANGO_CONNECT_DELAY_SEC=1.0
ARANGO_TIMEOUT_SEC=30.0
LOG_LEVEL=INFO
