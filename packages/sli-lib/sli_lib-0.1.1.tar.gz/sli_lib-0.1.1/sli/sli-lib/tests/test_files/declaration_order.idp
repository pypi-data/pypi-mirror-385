vocabulary {
    type col := {blue, red}
    opposite_again: -> col
    opposite: -> col
    chosen_col: -> col
}

theory {
    {
        opposite() = blue <- chosen_col() = red.
        opposite() = red <- chosen_col() = blue.
    }
    {
        opposite_again() = red <- opposite() = blue.
        opposite_again() = blue <- opposite() = red.   
    }
}

structure {
    chosen_col := red.
}
