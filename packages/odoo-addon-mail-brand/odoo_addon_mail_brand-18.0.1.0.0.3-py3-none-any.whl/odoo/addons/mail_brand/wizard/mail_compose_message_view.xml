<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="email_compose_message_wizard_form_mail_brand">
        <field name="name">mail.compose.message.form.brand</field>
        <field name="model">mail.compose.message</field>
        <field name="inherit_id" ref="mail.email_compose_message_wizard_form" />
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='subject']" position="after">
                <field name="brand_id" />
            </xpath>
        </field>
    </record>
</odoo>
