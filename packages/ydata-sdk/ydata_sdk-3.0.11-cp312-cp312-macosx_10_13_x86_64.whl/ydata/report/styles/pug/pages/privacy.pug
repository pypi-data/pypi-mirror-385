div.container
	section.content
		h2.heading=privacy.title
		each featured in featured
			if featured.label == "Privacy Score"
				div.speedometer-graph--central
					div.speedometer-pointer-wrapper(style='transform:rotate({{featured.rotation}}deg);')
						div.speedometer-pointer
					div.speedometer-mask
						div.speedometer-fill
						div.speedometer-bg
					div.speedometer-value {{ featured.qualitative_label }}
					div.speedometer-item
						label.speedometer-title=featured.label

		div.section-description {{ privacy.text }}

div.container
	section.content
		if anonymized.n_anonymized_cols > 0
			h2.heading.heading--small=anonymized.title
			div.row.row--with-table
				div.column--table {{ pdf_tools.dataframe_to_html(anonymized.anonymized_cols_details, extra_classes=['table'], use_default_classes=False) }}

		h2.heading.heading--small=privacy.title_metrics
		if privacy.blocks_available
			div.row.row--under-heading
				each block in privacy.blocks
					if block.value != None
						div.block.block--metrics
							div.block-box-small
								label.block-value=block.value
								label.block-label=block.label

		div.row
			div {{ privacy.metrics_description }}

		if privacy.has_errors
			div.section-description.section-description--logs
				h3.heading.heading--subtitle="Error Logs"
				each block in privacy.blocks
					if block.label in privacy_error_logs.keys()
						p {{ privacy_error_logs[block.label] }}
