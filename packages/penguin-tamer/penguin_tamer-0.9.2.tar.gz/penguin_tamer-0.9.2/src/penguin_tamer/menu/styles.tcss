/* Penguin Tamer Configuration Menu Styles */

Screen {
    layout: horizontal;
}

#left-panel {
    width: 65%;
    border: solid $border;
    padding: 1;
}

#right-panel {
    width: 35%;
    border: solid $border;
    padding: 1;
    margin-left: 1;
}

TabPane {
    padding: 0;
}

.tab-header {
    padding: 0 0 1 0;
    margin-bottom: 1;
}

.system-info-panel {
    width: 100%;
    padding: 1 2;
    margin-bottom: 2;
    background: $panel;
    border: solid $border;
}

.section-header {
    width: 100%;
    margin-top: 1;
    margin-bottom: 1;
}

.setting-group {
    margin-bottom: 1;
    padding: 0;
}

.setting-row {
    height: 3;
    align: left middle;
    margin-bottom: 0;
    margin-top: 0;
}

.setting-spacer {
    height: 1;
}

.flexible-spacer {
    height: 1fr;
}

#reset-settings-btn {
    dock: left;
}

.param-label {
    width: 40%;
    color: $text;
    padding-right: 2;
}

.param-control {
    width: 60%;
}

.param-description {
    margin-bottom: 0;
    color: $text-muted;
    text-style: italic;
}

.param-current {
    margin-bottom: 0;
    color: $success;
    text-style: bold;
}

.current-llm-panel {
    height: 3;
    width: 100%;
    background: $success;
    color: $text;
    text-style: bold;
    content-align: center middle;
    margin-bottom: 1;
}

.current-llm-label {
    width: 100%;
    margin-top: 1;
    margin-bottom: 0;
    padding: 0;
}

DataTable {
    height: auto;
    max-height: 15;
    margin-bottom: 0;
    border: solid $border;
}

.button-row {
    margin-bottom: 0;
    margin-top: 0;
    min-height: 3;
    height: auto;
    align: right top;
}

.reset-button-row {
    height: auto;
    align: left top;
    margin-top: 2;
    margin-bottom: 0;
}

.adaptive-button-row {
    height: auto;
    align: right top;
    margin-bottom: 1;
}

.adaptive-button-row Button {
    margin-right: 1;
    min-width: 16;
}

TextArea {
    height: 12;
    margin-bottom: 1;
}

Input {
    width: 1fr;
    text-align: right;
}

.param-control Input {
    width: 100%;
    margin: 0;
    text-align: right;
}

.param-control Switch {
    width: auto;
}

Switch {
    width: auto;
}

.param-control Select {
    width: 100%;
    margin: 0;
    text-align: right;
}

.setting-button {
    min-width: 12;
}

/* Dialog styles */
.input-dialog-container {
    width: 70;
    height: auto;
    background: $surface;
    border: thick $primary;
    padding: 2;
}

ConfirmDialog {
    align: center middle;
}

.input-dialog-title {
    width: 100%;
    content-align: center middle;
    text-style: bold;
    color: $accent;
    margin-bottom: 1;
}

.input-dialog-prompt {
    width: 100%;
    margin-bottom: 1;
}

.input-dialog-buttons {
    width: 100%;
    height: auto;
    align: center middle;
}

.input-dialog-buttons Button {
    margin: 0 2;
    min-width: 10;
}

/* LLM Edit Dialog */
.llm-dialog-container {
    width: 80;
    height: auto;
    background: $surface;
    border: thick $primary;
    padding: 2;
}

LLMEditDialog {
    align-horizontal: center;
    align-vertical: middle;
}

.llm-dialog-title {
    width: 100%;
    content-align: center middle;
    text-style: bold;
    color: $accent;
    margin-bottom: 2;
}

.llm-fields-container {
    width: 100%;
    height: auto;
    margin-bottom: 1;
}

.llm-field-label {
    width: 100%;
    margin-top: 1;
    margin-bottom: 0;
    color: $text;
}

.llm-fields-container Input {
    width: 100%;
    margin-bottom: 1;
}

.llm-fields-container Select {
    width: 100%;
    margin-bottom: 1;
}

.llm-fields-container Input > .input--placeholder {
    color: $text 30%;
    text-style: italic;
}

.provider-select-container {
    width: 100%;
    height: auto;
    margin-bottom: 1;
}

.provider-select-container Select {
    width: 100%;
    margin-bottom: 0;
}

.provider-select-container LoadingIndicator {
    width: 100%;
    height: 1;
    margin-top: 0;
}

.provider-select-container .hidden {
    display: none;
}

.llm-dialog-buttons {
    width: 100%;
    height: auto;
    align: center middle;
    margin-top: 1;
}

.llm-dialog-buttons Button {
    margin: 0 2;
    min-width: 15;
}

/* Button color overrides */
Button.-primary {
    background: $primary;
    color: $foreground;
    border: tall $primary;
}

Button.-primary:hover {
    background: $primary-darken-1;
    border: tall $primary-darken-1;
}

Button.-success {
    background: $success;
    color: $foreground;
    border: tall $success;
}

Button.-success:hover {
    background: $success-darken-1;
    border: tall $success-darken-1;
}

Button.-warning {
    background: $warning;
    color: $dark;
    border: tall $warning;
}

Button.-warning:hover {
    background: $warning-darken-1;
    border: tall $warning-darken-1;
}

Button.-error {
    background: $error;
    color: $foreground;
    border: tall $error;
}

Button.-error:hover {
    background: $error-darken-1;
    border: tall $error-darken-1;
}

Button.-default {
    background: $surface;
    color: $primary;
    border: tall $primary;
}

Button.-default:hover {
    background: $surface-lighten-2;
    border: tall $primary;
}

ScrollBar {
    background: $scrollbar-background;
}

ScrollBar > .thumb {
    background: $scrollbar-foreground;
}

ScrollBar > .thumb:hover,
ScrollBar > .thumb.-hover,
ScrollBar > .thumb:focus {
    background: $scrollbar-hover;
}

/* API Key Missing Dialog */
.api-key-dialog-container {
    width: 80;
    height: auto;
    background: $surface;
    border: thick $primary;
    padding: 2;
}

ApiKeyMissingDialog {
    align: center middle;
}

.api-key-dialog-content {
    width: 100%;
    height: auto;
    margin-bottom: 2;
}

.api-key-dialog-icon {
    width: 100%;
    content-align: center middle;
    text-style: bold;
    color: $accent;
    margin-bottom: 1;
    text-align: center;
}

.api-key-dialog-title {
    width: 100%;
    content-align: center middle;
    text-style: bold;
    color: $accent;
    margin-bottom: 2;
    text-align: center;
}

.api-key-dialog-message {
    width: 100%;
    margin-bottom: 0;
    padding: 1 2;
    text-align: center;
    color: $text;
}

.api-key-dialog-button-container {
    width: 100%;
    height: 3;
    align: center middle;
    margin-top: 1;
}

.api-key-dialog-button-container Button {
    min-width: 15;
    margin: 0 2;
}

/* Provider Manager Modal Screen */
.provider-manager-container {
    width: 70;
    height: auto;
    background: $surface;
    border: thick $primary;
    padding: 2;
}

ProviderManagerScreen {
    align: center middle;
}

.provider-manager-title {
    width: 100%;
    content-align: center middle;
    text-style: bold;
    color: $accent;
    margin-bottom: 1;
}

.provider-table-container {
    width: 100%;
    height: auto;
    margin-bottom: 1;
}

.provider-table-container DataTable {
    max-height: 20;
    height: auto;
    width: 100%;
}

.provider-manager-buttons {
    width: 100%;
    height: auto;
    align: center middle;
    margin-top: 0;
}

.provider-manager-buttons Button {
    margin: 0 1;
    min-width: 12;
}
