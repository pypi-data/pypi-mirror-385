{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/timeline-event.json",
  "title": "Promptware Timeline Event",
  "type": "object",
  "required": [
    "status"
  ],
  "additionalProperties": true,
  "properties": {
    "phase": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "duration_ms": {
      "type": "number"
    },
    "attempt": {
      "type": "integer",
      "minimum": 0
    },
    "alias": {
      "type": "string"
    },
    "target": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "branches": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "cases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "label"
        ],
        "properties": {
          "label": {
            "type": "string"
          },
          "condition": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "action": {
      "type": "string"
    },
    "result_alias": {
      "type": "string"
    },
    "append_key": {
      "type": "string"
    }
  }
}