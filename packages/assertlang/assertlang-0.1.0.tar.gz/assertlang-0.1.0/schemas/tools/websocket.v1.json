{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/websocket.v1.json",
  "type": "object",
  "properties": {
    "url": {"type": "string"},
    "op": {"type": "string", "enum": ["connect","send","recv","close"]},
