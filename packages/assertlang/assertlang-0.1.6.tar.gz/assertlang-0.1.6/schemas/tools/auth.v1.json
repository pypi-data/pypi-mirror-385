{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/auth.v1.json",
  "title": "Auth Tool",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "apiKey",
        "jwt"
      ]
    },
    "token": {
      "type": "string"
    },
    "header": {
      "type": "string",
      "default": "Authorization"
    },
    "prefix": {
      "type": "string",
      "default": "Bearer"
    },
    "lang": {
      "type": "string",
      "enum": [
        "python",
        "node",
        "nextjs",
        "go",
        "rust",
        "java",
        "dotnet",
        "cpp"
      ]
    }
  },
  "required": [
    "type",
    "token"
  ],
  "additionalProperties": false
}


