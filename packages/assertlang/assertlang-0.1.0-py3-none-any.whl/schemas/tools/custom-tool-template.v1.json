{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/custom-tool-template.v1.json",
  "title": "Custom Tool Template",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "lang": {
      "type": "string",
      "enum": [
        "python",
        "node",
        "nextjs",
        "go",
        "rust",
        "java",
        "dotnet",
        "cpp"
      ]
    }
  },
  "required": [
    "name"
  ],
  "additionalProperties": false
}


