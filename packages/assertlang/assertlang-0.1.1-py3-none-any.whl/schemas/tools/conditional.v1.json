{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/conditional.v1.json",
  "title": "Conditional Tool",
  "type": "object",
  "properties": {
    "left": {
      "type": "string"
    },
    "op": {
      "type": "string",
      "enum": [
        "==",
        "!=",
        "regex"
      ]
    },
    "right": {
      "type": "string"
    },
    "lang": {
      "type": "string",
      "enum": [
        "python",
        "node",
        "nextjs",
        "go",
        "rust",
        "java",
        "dotnet",
        "cpp"
      ]
    }
  },
  "required": [
    "left",
    "op",
    "right"
  ],
  "additionalProperties": false
}


