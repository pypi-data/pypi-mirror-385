{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/storage.v1.json",
  "title": "Storage Tool",
  "type": "object",
  "properties": {
    "backend": {
      "type": "string",
      "enum": [
        "fs"
      ],
      "default": "fs"
    },
    "op": {
      "type": "string",
      "enum": [
        "put",
        "get",
        "list",
        "delete"
      ]
    },
    "params": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "glob": {
          "type": "string"
        }
      },
      "required": [
        "path"
      ],
      "additionalProperties": true
    },
    "lang": {
      "type": "string",
      "enum": [
        "python",
        "node",
        "nextjs",
        "go",
        "rust",
        "java",
        "dotnet",
        "cpp"
      ]
    },
    "runtime": {
      "type": "string"
    }
  },
  "required": [
    "backend",
    "op",
    "params"
  ],
  "additionalProperties": false
}


