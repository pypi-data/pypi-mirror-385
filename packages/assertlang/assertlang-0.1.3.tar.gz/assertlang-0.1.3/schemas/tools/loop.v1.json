{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/loop.v1.json",
  "title": "Loop Tool",
  "type": "object",
  "properties": {
    "items": {
      "type": "array"
    },
    "body": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "lang": {
      "type": "string",
      "enum": [
        "python",
        "node",
        "nextjs",
        "go",
        "rust",
        "java",
        "dotnet",
        "cpp"
      ]
    }
  },
  "required": [
    "items"
  ],
  "additionalProperties": false
}


