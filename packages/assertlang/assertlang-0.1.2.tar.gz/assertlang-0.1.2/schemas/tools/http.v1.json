{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/http.v1.json",
  "title": "HTTP Tool",
  "type": "object",
  "properties": {
    "method": {
      "type": "string",
      "enum": [
        "GET",
        "POST",
        "PUT",
        "PATCH",
        "DELETE"
      ]
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "headers": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "body": {
      "type": [
        "string",
        "null"
      ]
    },
    "timeout_sec": {
      "type": "number",
      "minimum": 1,
      "maximum": 120
    },
    "lang": {
      "type": "string",
      "enum": [
        "python",
        "node",
        "nextjs",
        "go",
        "rust",
        "java",
        "dotnet",
        "cpp"
      ]
    },
    "runtime": {
      "type": "string"
    },
    "limits": {
      "type": "object",
      "properties": {
        "cpu_pct": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        },
        "mem_mb": {
          "type": "integer",
          "minimum": 16
        },
        "wall_sec": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "url"
  ],
  "additionalProperties": false
}


