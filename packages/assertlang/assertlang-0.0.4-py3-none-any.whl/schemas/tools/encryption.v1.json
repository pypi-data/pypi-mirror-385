{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/encryption.v1.json",
  "title": "Encryption Tool",
  "type": "object",
  "properties": {
    "op": {
      "type": "string",
      "enum": [
        "hash"
      ]
    },
    "alg": {
      "type": "string",
      "enum": [
        "sha256"
      ]
    },
    "data": {
      "type": "string"
    },
    "lang": {
      "type": "string",
      "enum": [
        "python",
        "node",
        "nextjs",
        "go",
        "rust",
        "java",
        "dotnet",
        "cpp"
      ]
    }
  },
  "required": [
    "op",
    "alg",
    "data"
  ],
  "additionalProperties": false
}


