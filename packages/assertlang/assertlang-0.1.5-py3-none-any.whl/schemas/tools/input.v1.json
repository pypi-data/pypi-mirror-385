{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/input.v1.json",
  "title": "Input Tool",
  "type": "object",
  "properties": {
    "source": {
      "type": "string",
      "enum": [
        "file"
      ]
    },
    "path": {
      "type": "string"
    },
    "encoding": {
      "type": "string",
      "default": "utf-8"
    },
    "lang": {
      "type": "string",
      "enum": [
        "python",
        "node",
        "nextjs",
        "go",
        "rust",
        "java",
        "dotnet",
        "cpp"
      ]
    }
  },
  "required": [
    "source",
    "path"
  ],
  "additionalProperties": false
}


