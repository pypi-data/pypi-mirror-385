{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/logger.v1.json",
  "title": "Logger Tool",
  "type": "object",
  "properties": {
    "level": {
      "type": "string",
      "enum": [
        "trace",
        "debug",
        "info",
        "warn",
        "error"
      ]
    },
    "message": {
      "type": "string"
    },
    "context": {
      "type": "object",
      "additionalProperties": {}
    },
    "lang": {
      "type": "string",
      "enum": [
        "python",
        "node",
        "nextjs",
        "go",
        "rust",
        "java",
        "dotnet",
        "cpp"
      ]
    },
    "adapter": {
      "type": "string"
    },
    "runtime": {
      "type": "string"
    },
    "limits": {
      "type": "object",
      "properties": {
        "cpu_pct": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        },
        "mem_mb": {
          "type": "integer",
          "minimum": 16
        },
        "wall_sec": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "message"
  ],
  "additionalProperties": false
}


