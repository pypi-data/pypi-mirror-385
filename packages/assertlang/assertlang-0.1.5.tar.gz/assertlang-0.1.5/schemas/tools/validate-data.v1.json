{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/validate-data.v1.json",
  "title": "Validate Data Tool",
  "type": "object",
  "properties": {
    "format": {
      "type": "string",
      "enum": [
        "json"
      ]
    },
    "schema": {
      "type": "object"
    },
    "content": {
      "type": "string"
    },
    "lang": {
      "type": "string",
      "enum": [
        "python",
        "node",
        "nextjs",
        "go",
        "rust",
        "java",
        "dotnet",
        "cpp"
      ]
    }
  },
  "required": [
    "format",
    "schema",
    "content"
  ],
  "additionalProperties": false
}


