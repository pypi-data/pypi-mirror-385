{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://assertlang.dev/schemas/tools/transform.v1.json",
  "title": "Transform Tool",
  "type": "object",
  "properties": {
    "from": {
      "type": "string",
      "enum": [
        "json",
        "yaml"
      ]
    },
    "to": {
      "type": "string",
      "enum": [
        "json",
        "yaml"
      ]
    },
    "content": {
      "type": "string"
    },
    "lang": {
      "type": "string",
      "enum": [
        "python",
        "node",
        "nextjs",
        "go",
        "rust",
        "java",
        "dotnet",
        "cpp"
      ]
    }
  },
  "required": [
    "from",
    "to",
    "content"
  ],
  "additionalProperties": false
}


