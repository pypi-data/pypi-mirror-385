<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_form_view_multi_default_code" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <field name="default_code" position="attributes">
                <attribute name="readonly">True</attribute>
            </field>
            <field name="default_code" position="after">
                <field name="default_code_ids">
                    <tree editable="bottom">
                        <field name="sequence" widget="handle" />
                        <field name="name" />
                    </tree>
                </field>
            </field>
        </field>
    </record>

    <record id="product_variant_easy_edit_view_multi_default_code" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view" />
        <field name="arch" type="xml">
            <field name="default_code" position="attributes">
                <attribute name="readonly">True</attribute>
            </field>
            <field name="default_code" position="after">
                <field name="default_code_ids">
                    <tree editable="bottom">
                        <field name="sequence" widget="handle" />
                        <field name="name" />
                    </tree>
                </field>
            </field>
        </field>
    </record>
    <record id="product_search_form_view_multi_default_code" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="default_code" string="Internal Reference" />
            </field>
        </field>
    </record>
</odoo>
