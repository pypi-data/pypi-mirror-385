<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_template_form_view_multi_default_code" model="ir.ui.view">
        <field name="name">product.template.form.multi.default_code</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <field name="default_code" position="attributes">
                <attribute name="readonly">True</attribute>
            </field>
            <field name="default_code" position="after">
                <field name="default_code_ids" invisible="product_variant_count > 1">
                    <tree editable="bottom">
                        <field name="sequence" widget="handle" />
                        <field name="name" />
                    </tree>
                </field>
            </field>
        </field>
    </record>
    <record id="product_template_search_view_multi_default_code" model="ir.ui.view">
        <field name="name">product.template.search.multi.default_code</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_search_form_view_stock" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="default_code_ids" />
            </field>
        </field>
    </record>
</odoo>
