name: "Catpuccin Mocha"

atom {
	trapped {
		color: #a6e3a1
	}
	shuttling {
		color: #b4befe
	}
	legend {
		name {
			^atom[_-]?(.*)$: "$1"
			^.*$: "$0"
		}
		font {
			family: "Fira Mono"
			size: 3
			color: #11111b
		}
	}
	radius: 2
	margin: 1
}

zone {
	config ^(zone[_-]?)?cz.*$ {
		color: #fab387
		line {
			thickness: 1
			dash {
				length: 0
				duty: 100%
			}
		}
		name: "CZ"
	}
	config ^_(zone[_-]?)?(.*)$ {
		color: #cba6f7
		line {
			thickness: 1
			dash {
				length: 0
				duty: 100%
			}
		}
		name: ""
	}
	config ^(zone[_-]?)?(.*)$ {
		color: #cba6f7
		line {
			thickness: 1
			dash {
				length: 0
				duty: 100%
			}
		}
		name: "$2"
	}
	legend {
		display: true
		title: "Zones"
	}
}

operation {
	config {
		ry {
			color: #94e2d5
			name: "RY"
			radius: 150%
		}
		rz {
			color: #89b4fa
			name: "RZ"
			radius: 150%
		}
		cz {
			color: #fab387
			name: "CZ"
			radius: 150%
		}
	}
	legend {
		display: true
		title: "Gates"
	}
}

machine {
	trap {
		color: #9399b2
		radius: 2
		line_width: 0.5
		name: "SLM"
	}
	shuttle {
		color: #7f849c
		line {
			thickness: 0.5
			dash {
				length: 5
				duty: 50%
			}
		}
		name: "AOD"
	}
	legend {
		display: true
		title: "Atom States"
	}
}

coordinate {
	tick {
		x: 20
		y: 20
		color: #6c7086
		line {
			thickness: 0.5
			dash {
				length: 0
				duty: 100%
			}
		}
		display: true
	}
	number {
		x {
			distance: 40
			position: bottom
		}
		y {
			distance: 40
			position: left
		}
		display: true
		font {
			family: "Fira Mono"
			size: 8
			color: #cdd6f4
		}
	}
	axis {
		x: "x"
		y: "y"
		display: true
		font {
			family: "Fira Mono"
			size: 8
			color: #cdd6f4
		}
	}
	margin: 5
}

sidebar {
	font {
		family: "Fira Mono"
		size: 32
		color: #cdd6f4
	}
	margin: 8
	padding {
		color: 16
		heading: 52
		entry: 45
	}
	color_radius: 16
}

time {
	display: true
	prefix: "Time: "
	precision: 1
	font {
		family: "Fira Mono"
		size: 12
		color: #cdd6f4
	}
}

viewport {
	margin: 4
	color: #1e1e2e
}
