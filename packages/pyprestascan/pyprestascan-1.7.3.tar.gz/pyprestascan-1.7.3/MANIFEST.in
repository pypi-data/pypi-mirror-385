# Include package data
include README.md
include LICENSE
include pyproject.toml

# Include templates and assets
recursive-include pyprestascan/templates *.j2 *.html
recursive-include pyprestascan/core/templates *.j2
recursive-include pyprestascan/reports/templates *.j2 *.html
recursive-include pyprestascan/assets *.css *.js *.min.css *.min.js

# Include any configuration files
include pyprestascan/*.json
include pyprestascan/*.yaml
include pyprestascan/*.yml

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
