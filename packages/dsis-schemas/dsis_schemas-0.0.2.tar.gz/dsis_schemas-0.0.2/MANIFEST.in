# Include documentation
include README.md
include README_SDK_GENERATION.md
include LICENSE

# Include package metadata
include pyproject.toml
include requirements.txt

# Include type information
include dsis_model_sdk/py.typed

# Exclude test files
exclude test_*.py
exclude COMPLETION_SUMMARY.md
exclude REQUIRED_FIELDS_UPDATE.md

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store

# Exclude schemas (they're large and not needed at runtime)
exclude common-model-json-schemas/*
exclude native-model-json-schemas/*

# Exclude virtual environment
exclude venv/*

