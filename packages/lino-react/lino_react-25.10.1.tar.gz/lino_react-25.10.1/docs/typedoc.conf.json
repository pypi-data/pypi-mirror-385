{
    "compilerOptions": {
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es2019",
        "lib": ["es2019", "dom"],
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "typedocOptions": {
        "emit": "docs",
        "options": {"ignoreCompilerErrors": true},
        "entryPoints": [
            "../lino_react/react/components/App.jsx"
        ]
    },
    "jsdocOptions": {
        "entryPoints": ["../lino_react/react/components/App.jsx"]
    },
    "include": [
        "../lino_react/react/components/*.jsx",
        "../lino_react/react/components/*.js",
        "../lino_react/react/components/*.ts",
        "../lino_react/react/components/*.tsx",
    ],
    "exclude": ["../node_modules/**"]
}
