<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- HEADER -->
    <!-- Custom header -->
    <record id="header" model="ir.ui.view">
        <field name="name">malaletra header</field>
        <field name="type">qweb</field>
        <field name="key">theme_malaletra.header</field>
        <field name="inherit_id" ref="website.layout"/>
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//header//nav" position="replace">
                <t t-call="website.navbar">
                    <t t-set="_navbar_classes" t-valuef="d-none d-lg-block p-0"/>
                    <div id="o_main_nav" class="o_main_nav flex-wrap d-md-none bg-primary">
                        <div class="container p-4">
                            <div class="row align-items-center justify-content-between">
                                <div class="col-6">
                                    <a href="/" class="navbar-brand logo mw-100 m-0 mh-auto">
                                        <span role="img" aria-label="Logo of My Website">
                                            <img src="/website_malaletra/static/img/logo.png"
                                                class="img img-fluid" alt="Logo malaletra" />
                                        </span>
                                    </a>
                                </div>
                                <div class="col-6">
                                    <div class="text-right ml-social">
                                        <a href="https://instagram.com/malaletra_vk/" class="btn btn-sm btn-link">
                                            <i class="text-white fa fa-2x fa-instagram" />
                                        </a>
                                        <a href="https://x.com/malaletra_vk/" class="btn btn-sm btn-link">
                                            <i class="text-white fa fa-2x fa-twitter" />
                                        </a>
                                        <a href="https://api.whatsapp.com/send?phone=34683151286" class="btn btn-sm btn-link">
                                            <i class="text-white fa fa-2x fa-whatsapp" />
                                        </a>
                                        <a href="callto:+34683151286" class="btn btn-sm btn-link">
                                            <i class="text-white fa fa-2x fa-phone" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="row align-items-center justify-content-center">
                                <div class="col">
                                    <t t-call="website.header_search_box_input" t-nocache="The searchbox should not cache previous searches.">
                                        <t t-set="_layout" t-valuef="modal"/>
                                        <t t-set="_input_classes" t-valuef="border border-end-0 p-3"/>
                                        <t t-set="_submit_classes" t-valuef="border border-start-0 px-4 bg-white"/>
                                        <t t-set="_button_classes" t-valuef="o_navlink_background text-reset"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <div  aria-label="Bottom" class="container d-grid align-items-center w-100 py-2 o_grid_header_3_cols">
                            <!-- Navbar -->
                            <t t-call="website.navbar_nav">
                                <t t-set="_nav_class" t-valuef="me-4"/>
                                <!-- Menu -->
                                <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-call="website.submenu">
                                        <t t-set="item_class" t-valuef="nav-item"/>
                                        <t t-set="link_class" t-valuef="nav-link"/>
                                    </t>
                                </t>
                            </t>
                        </div>
                    </div>
                    <div id="o_main_nav" class="o_main_nav flex-wrap w-100 d-none d-md-block bg-primary">
                        <div class="container py-4 px-5">
                            <div class="row align-items-center justify-content-between">
                                <div class="col-4">
                                    <a href="/" class="navbar-brand logo">
                                        <span role="img" aria-label="Logo of My Website">
                                            <img src="/website_malaletra/static/img/logo.png"
                                                class="img img-fluid" alt="Logo malaletra" />
                                        </span>
                                    </a>
                                </div>
                                <div class="col-5">
                                    <div class="d-flex justify-content-end text-right ml-social">
                                        <a href="https://instagram.com/malaletra_vk"
                                            class="btn btn-sm btn-link">
                                            <i class="text-white fa fa-2x fa-instagram" />
                                        </a>
                                        <a href="https://x.com/malaletra_vk" class="btn btn-sm btn-link">
                                            <i class="text-white fa fa-2x fa-twitter" />
                                        </a>
                                        <a href="https://api.whatsapp.com/send?phone=34683151286" class="btn btn-sm btn-link">
                                            <i class="text-white fa fa-2x fa-whatsapp" />
                                        </a>
                                        <a href="callto:+34683151286" class="btn btn-sm btn-link">
                                            <i class="text-white fa fa-2x fa-phone" />
                                        </a>
                                    </div>
                                    <div class="mt-2">
                                        <t t-call="website.header_search_box_input" t-nocache="The searchbox should not cache previous searches.">
                                            <t t-set="_layout" t-valuef="modal"/>
                                            <t t-set="_input_classes" t-valuef="border border-end-0 py-1 px-3 bg-tertiary"/>
                                            <t t-set="_submit_classes" t-valuef="border border-start-0 px-4 bg-white"/>
                                            <t t-set="_button_classes" t-valuef="o_navlink_background text-reset"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div  aria-label="Bottom" class="bg-secondary w-100 py-2">
                            <div class="container d-grid align-items-center">
                                <!-- Navbar -->
                                <t t-call="website.navbar_nav">
                                    <t t-set="_nav_class" t-valuef="justify-content-center"/>
                                    <!-- Menu -->
                                    <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                        <t t-call="website.submenu">
                                            <t t-set="item_class" t-valuef="nav-item text-tertiary"/>
                                            <t t-set="link_class" t-valuef="nav-link"/>
                                        </t>
                                    </t>
                                </t>
                            </div>
                        </div>
                    </div>
                </t>
            </xpath>
        </field>
    </record>

<!-- FOOTER -->
    <!-- Custom Footer -->
    <record id="footer" model="ir.ui.view">
        <field name="name">Malaletra Footer</field>
        <field name="type">qweb</field>
        <field name="key">theme_malaletra.footer</field>
        <field name="inherit_id" ref="website.layout"/>
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='footer']" position="replace">
                <footer class="p-5 bg-epsilon">
                    <div class="container py-4 px-5">
                        <div class="row">
                            <div class="col-12 col-md mb-4 p-2 d-flex flex-column justify-content-start">
                                <h5 class="mb-3">¿dónde estamos?</h5>
                                <p>Calle Sierra de Alquife 12 Madrid</p>
                            </div>
                            <div class="col-12 col-md mb-4 p-2 d-flex flex-column justify-content-start">
                                <h5 class="mb-3">Nos puedes encontrar</h5>
                                <p class="m-0 mb-1">
                                    <strong>L-V</strong>: 10:30h-14:30 // 17:30-21h <br />
                                </p>
                                <p class="m-0 mb-1">
                                    <strong>S</strong>: 11-21h </p>
                            </div>
                            <div class="col-12 col-md mb-4 p-2 d-flex flex-column justify-content-start">
                                <h5 class="mb-3">Si no, puedes escribirnos aquí:</h5>
                                <a class="text-white" href="mailto:info@malaletra.org">
                                    info@malaletra.org</a>
                                <span>(+34) 6644811429</span>
                                <div class="mt-3 d-flex justify-content-start ml-social">
                                    <a href="https://instagram.com/malaletra"
                                        class="btn btn-sm btn-link">
                                        <i class="text-white fa fa-2x fa-instagram" />
                                    </a>
                                    <a href="https://x.com/malaletra" class="btn btn-sm btn-link">
                                        <i class="text-white fa fa-2x fa-twitter" />
                                    </a>
                                    <a href="https://whatsapp.com/malaletra" class="btn btn-sm btn-link">
                                        <i class="text-white fa fa-2x fa-whatsapp" />
                                    </a>
                                    <a href="callto:+34683151286" class="btn btn-sm btn-link">
                                        <i class="text-white fa fa-2x fa-phone" />
                                    </a>
                                </div>
                            </div>
                            <div class="col-12 col-md mb-4 p-2 d-flex flex-column align-items-center align-items-md-end border-left order-first order-md-last">
                                <img src="/website_malaletra/static/img/logo-vertical.png"
                                    alt="Logo de malaletra en vertical" />
                            </div>
                        </div>
                    </div>
                </footer>
            </xpath>
        </field>
    </record>

</odoo>
