}

TabbedPlots {
    column-span: 3;
    height: 19;
    width: 114;
    background: black
}

#game_score_plot {
    height: 15;
    width: 100%;
}

#highscore_plot {
    height: 15;
    width: 100%;
}

#loss_plot {
    height: 15;
    width: 100%;
}

#legend {
    border: round #0c323e;
}

Button {
    align: center middle;
    border: round #0c323e;
    width: 10;
    background: black; 
}

#game_board {
    border: round #0c323e;
    align: center middle;
    background: black;
}



