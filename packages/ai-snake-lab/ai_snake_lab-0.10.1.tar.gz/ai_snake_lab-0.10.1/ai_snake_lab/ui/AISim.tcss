Screen {
    layout: grid;
    grid-size: 3 5;
    grid-rows: 3 11 6 7 24;
    grid-columns: 32 46 36;
}

#title {
    column-span: 3;
    width: 100%;
    padding: 0 1;
    border: round #0c323e;
    color: #3e99af;
    background: black;
    text-style: bold;
    align: center middle; }

#settings_box {
    border-title-color: #5fc442;
    border-title-style: bold;
    border: round #0c323e;
    padding: 0 1;
    background: black;
}

#game_box {
    row-span: 3;
    border-title-color: #5fc442;
    border-subtitle-color: #5fc442;
    border: round #0c323e;
    background: black;
    align: center middle;
    padding: 0 1; 
}

#runtime_box {
    height: 100%;
    border-title-color: #5fc442;
    border-title-style: bold;
    border: round #0c323e;
    padding: 0 1;
    background: black;
}

#highscores_box {
    row-span: 2;
    border-title-color: #5fc442;
    border-title-style: bold;
    border: round #0c323e;
    padding: 0 1;
    background: black;

}

