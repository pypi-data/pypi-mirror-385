# Core documents
include README.md
include LICENSE
include pyproject.toml

# YAML configuration files
recursive-include evolib/config *.yaml

# Python files explicitly
recursive-include evolib *.py
include evolib/py.typed

# Example code or notebooks
recursive-include examples *.py
recursive-include examples *.ipynb

# Documentationd
recursive-include docs *.md *.rst *.py
prune docs/_build

# If Sphinx documentation with static assets
recursive-include docs/_static *

# Package-specific README files
recursive-include evolib **/README.md


# Exclude caches everywhere
global-exclude __pycache__/*
global-exclude .mypy_cache/*
prune **/__pycache__
prune **/.mypy_cache
