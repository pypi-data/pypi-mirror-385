[run]
# All files under source are checked, even if not otherwise referenced.
source = .

# More strict: Check transitions between lines, not just individual lines.
# TODO: branch = True

omit =
  examples/*


[report]
show_missing = True
skip_covered = True
fail_under = 100
# Negative look-ahead: We *do* want to cover test functions.
exclude_also = def (?!test)\w*template
