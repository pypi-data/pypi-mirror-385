{
  "mcpServers": {
    "mcp-sqlite": {
      "command": "npx",
      "args": [
          "-y",
          "mcp-sqlite",
          "data/automagik.db"
      ],
      "agent_names": ["*"],
      "tools": {
        "include": ["*"]
      }
    },
    "deepwiki": {
      "type": "sse",
      "url": "https://mcp.deepwiki.com/sse",
      "agent_names": ["*"],
      "tools": {
        "include": ["*"]
      }
    },
    "spark": {
      "command": "uvx",
      "args": ["automagik-tools", "tool", "spark"],
      "env": {
        "SPARK_API_KEY": "namastex888",
        "SPARK_BASE_URL": "http://localhost:8883",
        "SPARK_TIMEOUT": "30"
      }
    }
  }
}
