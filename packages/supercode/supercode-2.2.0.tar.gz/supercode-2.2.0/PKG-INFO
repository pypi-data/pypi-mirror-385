python
from supercode import Compiler, set_func, set_block_handler

# å®šä¹‰ä¸€äº›å®ç”¨åŠŸèƒ½
def set_var(*args):
    var_name = args[0]
    value = " ".join(args[1:])
    return f"Set {var_name} = {value}"

def display(*args):
    message = " ".join(args)
    return f"ğŸ“¢ {message}"

def calculate(*args):
    try:
        result = eval(" ".join(args))
        return f"ğŸ§® {' '.join(args)} = {result}"
    except:
        return f"âŒ Calculation error: {' '.join(args)}"

# åˆ›å»ºç¼–è¯‘å™¨å¹¶é…ç½®
compiler = Compiler([
    set_func("set", set_var),
    set_func("show", display), 
    set_func("calc", calculate)
])

# å†™ä¸ªæœ‰è¶£çš„ç¨‹åº
my_program = """
set name SuperProgrammer
show Hello, I am name
calc 2 * 3 + 4
show Look how smart I am!
calc 10 / 0
show Even errors won't crash me!
"""

print("ğŸ¬ Running my program:")
for output in compiler.compile(my_program):
    if output:
        print(output)
