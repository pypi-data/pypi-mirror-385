from supercode import Compiler

# åˆ›å»ºä½ çš„ä¸“å±ç¼–è¯‘å™¨
compiler = Compiler()

# æ•™å®ƒè®¤è¯†æ–°å•è¯
compiler.set_func("greet", lambda name: f"Hello, {name}!")
compiler.set_func("add", lambda a, b: f"{a} + {b} = {int(a) + int(b)}")

# å¼€å§‹å¯¹è¯ï¼
