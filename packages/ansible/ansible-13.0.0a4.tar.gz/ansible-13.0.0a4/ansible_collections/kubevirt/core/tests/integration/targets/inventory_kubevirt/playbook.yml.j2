---
- name: Create VMs
  connection: local
  gather_facts: false
  hosts: localhost
  tasks:
    - name: Create a VM
      kubevirt.core.kubevirt_vm:
        state: present
        name: testvm1
        namespace: {{ NAMESPACE }}
        labels:
          app: test
        spec:
          domain:
            memory:
              guest: 256Mi
            devices:
              interfaces:
                - name: default
                  masquerade: {}
                - name: bridge-network
                  bridge: {}
          networks:
            - name: default
              pod: {}
            - name: bridge-network
              multus:
                networkName: {{ SECONDARY_NETWORK }}
          volumes:
            - containerDisk:
                image: quay.io/containerdisks/centos-stream:9
              name: containerdisk
        wait: true
        wait_timeout: 600

    - name: Create another VM
      kubevirt.core.kubevirt_vm:
        state: present
        name: testvm2
        namespace: {{ NAMESPACE }}
        labels:
          foo: bar
        spec:
          domain:
            memory:
              guest: 256Mi
            devices: {}
          volumes:
            - containerDisk:
                image: quay.io/containerdisks/centos-stream:9
              name: containerdisk
        wait: true
        wait_timeout: 600

    - name: Create a stopped VM
      kubevirt.core.kubevirt_vm:
        state: present
        name: testvm-stopped
        namespace: {{ NAMESPACE }}
        running: false
        spec:
          domain:
            devices: {}
