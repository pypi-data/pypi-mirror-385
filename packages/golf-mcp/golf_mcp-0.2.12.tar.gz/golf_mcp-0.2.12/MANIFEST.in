include README.md
include LICENSE
include pyproject.toml
graft .docs
graft src/golf/examples

# Exclude common Python bytecode files and caches
prune **/__pycache__
global-exclude *.py[co]

# Exclude build artifacts and local env/dist files if they were accidentally included
prune build
prune dist
prune .eggs
prune *.egg-info
prune .env
prune .venv

# Exclude development and cache directories
prune .claude
prune htmlcov
prune thoughts
prune new
prune tests
prune .pytest_cache
prune .ruff_cache
prune .git
prune .github

# Exclude development files
exclude build.sh
exclude setup.py
exclude CLAUDE.md
exclude Makefile
exclude .coverage
exclude .DS_Store
exclude *.code-workspace
exclude golf-banner.png 