# Polygon.io API Credentials Template
#
# Copy this file to credentials.yaml and fill in your actual credentials
# WARNING: Never commit credentials.yaml to git!

polygon:
  # S3 Flat Files Access
  s3:
    access_key_id: "YOUR_POLYGON_S3_ACCESS_KEY"
    secret_access_key: "YOUR_POLYGON_S3_SECRET_KEY"
    endpoint_url: "https://files.polygon.io"
    bucket: "flatfiles"

  # REST API (optional, for metadata)
  api:
    key: "YOUR_POLYGON_API_KEY"

# AWS S3 (if using for backup/archive)
aws:
  access_key_id: "YOUR_AWS_ACCESS_KEY"
  secret_access_key: "YOUR_AWS_SECRET_KEY"
  region: "us-east-1"
  bucket: "your-backup-bucket"
