# System Profile Configuration Example
# Copy this file to system_profile.yaml and customize for your system
# This file is gitignored - safe to store personal paths

# Optional: Override data root path
# If not set, uses data_root from pipeline_config.yaml or DATA_ROOT env var
# Examples:
#   macOS external drive: /Volumes/sandisk/quantmini-data/ticker_lookup
#   Linux mount: /mnt/storage/quantmini-data/ticker_lookup
#   Local: ./data
data_root: /Volumes/sandisk/quantmini-data/ticker_lookup

# Hardware detection (auto-populated by profiler)
hardware:
  cpu_cores: 8
  cpu_threads: 8
  memory_gb: 16.0
  available_memory_gb: 8.0
  platform: Darwin
  processor: arm
  architecture: arm64
  is_apple_silicon: true

# Storage info (auto-populated by profiler)
storage:
  disk_free_gb: 100.0
  disk_total_gb: 500.0
  disk_type: SSD

# Recommended processing mode (auto-detected)
# Options: streaming, batch, parallel, adaptive
recommended_mode: streaming

# Resource limits (auto-calculated based on hardware)
resource_limits:
  max_memory_gb: 12
  chunk_size: 10000
  max_workers: 4
  max_concurrent_downloads: 4
  parquet_row_group_size: 100000
