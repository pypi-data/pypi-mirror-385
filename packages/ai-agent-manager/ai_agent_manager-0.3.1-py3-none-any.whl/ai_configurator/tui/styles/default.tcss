/* Default stylesheet for AI Configurator TUI */

Screen {
    background: $surface;
}

Header {
    background: $primary;
    color: $text;
}

Footer {
    background: $panel;
}

#main-container {
    padding: 1 2;
    height: 100%;
}

#title {
    text-align: center;
    padding: 1;
}

#status {
    padding: 1;
    border: solid $primary;
    margin: 1 0;
}

#menu {
    padding: 1;
    height: auto;
}

Button {
    margin: 1 0;
    width: 100%;
}

Button:focus {
    border: heavy $accent;
}

#help {
    text-align: center;
    padding: 1;
}

DataTable {
    height: 100%;
}

DataTable > .datatable--cursor {
    background: $accent;
    color: $text;
}

DataTable:focus > .datatable--cursor {
    background: $accent-darken-1;
    color: $text;
}

.agent-list {
    height: 100%;
}

/* Agent editor split panes */
.left-pane {
    width: 50%;
}

.right-pane {
    width: 50%;
}

.left-pane-top {
    height: 50%;
}

.left-pane-bottom {
    height: 50%;
}

.right-pane-top {
    height: 50%;
}

.right-pane-bottom {
    height: 50%;
}

/* Context patterns section */
.patterns-section {
    height: 6;
    margin: 1 0;
}

.patterns-table {
    height: 4;
}
