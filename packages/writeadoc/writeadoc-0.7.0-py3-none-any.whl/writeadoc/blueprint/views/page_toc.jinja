{% macro render_toc(items) %}
	<ul>
	{% for item in items -%}
	<li class="level--{{ item.level }}"><a href="#{{ item.id }}">{{ item.html|safe }}</a>
	{%- if item.children %}{{ render_toc(item.children) }}{% endif -%}
	</li>
	{% endfor %}
	</ul>
{% endmacro %}

<nav class="page__toc" id="pagetoc-popover" popover="auto">
{% if page.toc -%}
<a class="top-link" href="#">{{ _('BACK_TO_TOP') }}</a>
<h4><a href="#">{{ _('ON_THIS_PAGE') }}</a></h4>
{{ render_toc(page.toc) }}
{%- endif %}
</nav>