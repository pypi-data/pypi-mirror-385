{# import "./metadata.jinja" as Metadata #}
{# import "./header.jinja" as Header #}
{# import "./sidebar.jinja" as Sidebar #}
{# import "./page_nav.jinja" as PageNav #}
{# import "./banner_archived.jinja" as BannerArchived #}
{# def sidebar=False #}
<!DOCTYPE html>
<html lang="{{ site.lang }}" class="cs-system">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>{% if page.title %}{{ page.title | striptags }} | {% endif %}{{ site.name | striptags }}</title>

<meta content="ie=edge" http-equiv="x-ua-compatible" />
<meta name="handheldfriendly" content="true" />
<meta name="viewport" content="initial-scale=1, width=device-width" />

<script src="/assets/js/color-scheme.js"></script>
<link rel="stylesheet" href="/assets/css/base.css" />
<link rel="stylesheet" href="/assets/css/index.css" />
<link rel="stylesheet" href="/assets/css/layout.css" />

<Metadata />

<script type="module" src="/assets/js/turbo.min.js"></script>
<script type="module" src="/assets/js/script.js"></script>
{{ assets.render() -}}
<script src="/assets/js/lunr.min.js"></script>
{%- if site.lang != "en" %}
<script src="/assets/js/lunr.{{ site.lang }}.min.js"></script>
{%- endif %}
</head>

<body class="page-{{ page.id }}{% if sidebar %} has-sidebar{% endif %}">
  <div class="layout">
    <Header />

    <main class="main">
      <Sidebar />
      <div class="page">
        <PageNav />
        <BannerArchived />
        {{ content }}
      </div>
    </main>
  </div>

  <script>
    window.strings = {
      COPY: "{{ _('COPY') }}",
      COPIED: "{{ _('COPIED') }}",
      NO_RESULTS_FOUND: "{{ _('NO_RESULTS_FOUND') }}",
    };
  </script>
</body>
</html>