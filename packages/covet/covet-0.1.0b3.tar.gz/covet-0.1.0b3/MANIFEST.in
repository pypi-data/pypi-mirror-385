# Covet PyPI Source Distribution Manifest
# PEP 517/518 compliant package manifest

# Core documentation and metadata (required for PyPI)
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml
include setup.py

# Python source code and type information
recursive-include src/covet *.py *.pyi
include src/covet/py.typed

# Essential configuration
include requirements.txt
include requirements-dev.txt

# Examples for users to learn from
recursive-include examples *.py *.md
prune examples/__pycache__

# Basic documentation (user-facing only)
recursive-include docs *.md
prune docs/__pycache__

# Exclude common development and build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude *.egg-info
global-exclude .DS_Store
global-exclude Thumbs.db

# Exclude version control and IDE files
global-exclude .git*
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude build and cache directories
global-exclude build/*
global-exclude dist/*
global-exclude .mypy_cache
global-exclude .pytest_cache
global-exclude .ruff_cache
global-exclude .coverage
global-exclude htmlcov
global-exclude .tox

# Exclude virtual environments
global-exclude venv
global-exclude .venv
global-exclude env

# Exclude development files
global-exclude *.tmp
global-exclude *.log
global-exclude *.bak
global-exclude .env
global-exclude *.env.local

# Exclude CI/CD and Docker files  
global-exclude .github
global-exclude Dockerfile*
global-exclude docker-compose*.yml
global-exclude *.yml
global-exclude *.yaml

# Exclude Rust development artifacts
exclude Cargo.toml
exclude Cargo.lock
global-exclude target
global-exclude *.rs

# Exclude specific development files
exclude demo_zero_dependency.py
exclude test_zero_dependency.py
exclude comprehensive_test.py
exclude final_demo.py
exclude *benchmark*.py
exclude *demo*.py
exclude *test*.py
exclude setup_rust.py
exclude build_rust.py