#PARI/GP is free software; you can redistribute it and/or modify it under the
#terms of the GNU General Public License as published by the Free Software
#Foundation. It is distributed in the hope that it will be useful, but WITHOUT
#ANY WARRANTY WHATSOEVER.
#
#Check the License for details. You should have received a copy of it, along
#with the package; see the file 'COPYING'. If not, write to the Free Software
#Foundation, Inc., 51 Franklin Street, Fifth Floor, Boston, MA 02110-1301 USA.

name="stdin";
for p in "$@"; do
case "$p" in
  -h|--help) cat <<EOF
gp2c-run <options> <file.gp>
Compile file.gp with gp2c and launch a gp session with functions of file.gp
added.
<options> are passed to gp2c

gp2c-run <file.c>
Compile file.c and launch a gp session with functions of file.c added.

ENVIRONMENT:
GP2C: path to the gp2c compiler, default: /Users/runner/sage-local/bin/gp2c
GP: path to the gp calculator, default: /Users/runner/sage-local/bin/gp
EOF
exit
;;
  -l|-t|-v)  exec $GP2C "$@" ;;
  -o) echo "gp2c-run does not support option -o" 1>&2; exit 1;;
  -*) ;; #We discard options
  *) name=$p;;
esac
done

if test "x$GP2C" = "x"; then
  GP2C="/Users/runner/sage-local/bin/gp2c"
fi


if test "x$GP" = "x"; then
  GP="/Users/runner/sage-local/bin/gp"
fi

case $name in
*.c) name=${name%.c};;
*) $GP2C -o $name.c "$@" ;;
esac

command=`echo "gcc -c -o %s.o -O3 -Wall -fno-strict-aliasing -g -O2 -fPIC -fno-common -I\"/Users/runner/sage-local/include\" %s.c && gcc -o %s.so -bundle -undefined dynamic_lookup -L/Users/runner/sage-local/lib -lpari -O3 -Wall -fno-strict-aliasing -g -O2 -fPIC -fno-common %s.o " | sed -e "s %s $name g"`
eval $command || exit $?
grep "^GP;" $name.c | sed 's/^GP;//' >$name.run
$GP $name.run
