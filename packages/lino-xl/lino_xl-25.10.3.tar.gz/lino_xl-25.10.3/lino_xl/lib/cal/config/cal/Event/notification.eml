<div class="row-fluid">
<h1>{{obj.obj2memo(obj.summary)}}</h1>
{% if True or obj.access_class == rt.actors.cal.AccessClasses.public %}
<p style="background-color:#eeeeee; padding:6pt;">

<b>{{_("Date")}} :</b> {{obj.start_date}}
{% if obj.end_date %} - {{obj.end_date}}{% endif %}
{% if obj.start_time %}
<br/><b>{{_("Time")}} : {{obj.start_time}}-{{obj.end_time}}
{% endif %}

{% if obj.room %}
<br/><b>{{_("Room")}} :</b> {{tostring(obj.room.obj2href(ar))}}
{% endif %}
{% if obj.type %}
<br/><b>Type:</b> {{obj.type}}
{% endif %}
</p>
<div>
{{obj.description}}
</div>
{% endif %}
</div>
