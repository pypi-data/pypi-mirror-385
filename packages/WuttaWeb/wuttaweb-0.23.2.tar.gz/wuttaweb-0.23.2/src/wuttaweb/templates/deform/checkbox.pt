<div tal:omit-tag=""
     tal:define="name name|field.name;
                 oid oid|field.oid;
                 vmodel vmodel|'modelData.'+oid;">
  <b-checkbox name="${name}"
              v-model="${vmodel}"
              native-value="true"
              tal:attributes="attributes|field.widget.attributes|{};">
    {{ ${vmodel} ? "Yes" : "No" }}
  </b-checkbox>
</div>
