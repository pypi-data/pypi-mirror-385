{
  "extends": "./base.tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "lib",
    "preserveWatchOutput": true,
    "rootDir": "src",
    "esModuleInterop": true,
   "verbatimModuleSyntax": false,
    "strict": true,
    "target": "ES2018",
    "types": [
      "jest", "@testing-library/jest-dom", "node"
    ]
  },
  "include": [
    "src/**/*",
    "./src/**/*.json"
  ]
}