{"templates":[
{
  "name": "default_slate",
  "variables": {
    "backdrop_color": [40, 40, 40, 255],
    "logo_img": "${PWD}/examples/images/logo-example.png",
    "cat_img": "${PWD}/examples/images/cat.jpg",
    "svg_img": "${PWD}/examples/images/example-logo.svg",
    "encoded_img": "base64::cat.jpg::"

  },
  "defaults": {
    "font_size": "3.5u",
    "text_color": "lightgray",
    "color": [0, 0, 0, 150]
  },
  "shapes": [
    // simple JPG image
    {
      "type": "image",
      "source": "$cat_img",
      "id": "cat1",
      "w": "25p",
      "x": "2p", "y": "2p"
    },
    {
      "type": "label", "parent": "cat1",
      "text": "Image from file", "x": "1p",  "y": "=parent.h+1p",
      "backdrop": {
        "color": "$backdrop_color",
        "padding": "0.5p"
      }
    },

    // PNG with transparency
    {
      "type": "image",
      "source": "$logo_img",
      "w": "20p",
      "x": "=parent.width-self.width-2p", "y": "2p",
      "id": "logo1"
    },
    {
      "type": "label", "parent": "logo1",
      "text": "PNG with transparency", "x": "=parent.w-self.w",  "y": "=parent.h+1p",
      "backdrop": {
        "color": "$backdrop_color",
        "padding": "0.5p"
      }
    },
    // SVG File
    {
      "type": "image",
      "source": "$svg_img",
      "w": "25p",
      "x": "=parent.width-self.width-2p", "y": "=parent.h-self.h-2p",
      "id": "logo_svg"
    },
    {
      "type": "label", "parent": "logo_svg",
      "text": "SVG File", "x": "=parent.w-self.w-2p",  "y": "=-self.h-2p",
      "backdrop": {
        "color": "$backdrop_color",
        "padding": "0.5p"
      }
    },
    // using source image
    {
      "type": "rect",
      "w": "=parent.w*0.3", "h": "=parent.h*0.3",
      "align_h": "center", "align_v": "center",
      "id": "backdrop"
    },
    {
      "type": "image",
      "parent": "backdrop",
      "source": "$source",
      "w": "=parent.w*0.9",
      "align_h": "center", "align_v": "center"
    },

    {
      "type": "label", "parent": "backdrop",
      "text": "Source Image",
      "align_v": "center", "align_h": "center",
      "backdrop": {
        "color": "$backdrop_color",
        "padding": "0.5p"
      }
    },
    // encoded image
    {
      "type": "image",
      "source": "$encoded_img",
      "w": "20p",
      "x": "2p", "y": "=parent.h-self.h-2p",
      "id": "encoded"
    },
    {
      "type": "label", "parent": "encoded",
      "text": "Embedded", "y": "=-self.h-1p", "x": "1p",
      "backdrop": {
        "color": "$backdrop_color",
        "padding": "0.5p"
      }
    }
  ]
}
]}