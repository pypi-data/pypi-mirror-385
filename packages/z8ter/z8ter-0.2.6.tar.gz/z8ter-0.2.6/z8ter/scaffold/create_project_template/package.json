{
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "@types/node": "^24.3.0",
    "concurrently": "^8.2.2",
    "daisyui": "^5.0.50",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-solid": "^2.11.8"
  },
  "scripts": {
    "dev:css": "npx @tailwindcss/cli -i src/css/app.css -o static/css/output.css -w",
    "dev:js": "vite build --watch",
    "dev:server": "z8 run dev",
    "dev": "concurrently -n css,js,server -c green,blue,magenta \"npm:dev:css\" \"npm:dev:js\" \"npm:dev:server\"",
    "typecheck": "tsc -w",
    "build:css": "npx @tailwindcss/cli -i src/css/app.css -o static/css/output.css",
    "build:js": "vite build",
    "build": "npm run build:css && npm run build:js"
  },
  "dependencies": {
    "solid-element": "^1.9.1",
    "solid-js": "^1.9.9"
  }
}
