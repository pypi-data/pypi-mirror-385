{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/ts/*"]
    },
    "types": ["vite/client"],
    "jsxImportSource": "solid-js",
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": ["src/ts", "env.d.ts"],
  "exclude": ["node_modules", "static/js/dist"]
}
