# Environment configuration for equitas

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database
DATABASE_URL=sqlite+aiosqlite:///./equitas.db

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Guardian Settings
DEFAULT_TOXICITY_THRESHOLD=0.7
DEFAULT_BIAS_THRESHOLD=0.3
ENABLE_ASYNC_LOGGING=true

# Model Settings
TOXICITY_MODEL=openai-moderation
BIAS_DETECTION_ENABLED=true
JAILBREAK_DETECTION_ENABLED=true
