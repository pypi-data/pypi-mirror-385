# Include license and metadata files:
include pyproject.toml
include README.rst
include LICENSE
include CHANGELOG.rst

# Include the package itself
graft src

# Exclude anything under docs/ and examples/:
prune docs
prune examples
prune images
prune codebin
prunt input
prunt output
prune playground
prune .github

# Exclude specific files
exclude .env
exclude .coveralls.yml
exclude .gitignore
exclude .pre-commit-config.yaml
exclude .readthedocs.yaml
exclude .secrets.baseline
exclude CODE_OF_CONDUCT.rst
exclude CODE_OF_CONDUCT.md
exclude conftest.py
exclude CONTRIBUTING.rst
exclude Makefile
exclude SECURITY.md
exclude SECURITY.rst
exclude presentation.rst
exclude storyteller.jpg
exclude tox.ini
exclude uv.lock
exclude _README.rst

# Exclude any hidden directories:
prune __pycache__

# Drop bytecode, etc.
-global-exclude *.py[cod]
