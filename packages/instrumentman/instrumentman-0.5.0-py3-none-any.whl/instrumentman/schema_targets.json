{
    "title": "Instrumentman set measurement targets schema",
    "description": "Target point records for set measurements",
    "tpye": "object",
    "additionalProperties": false,
    "required": ["targets"],
    "properties": {
        "targets": {
            "title": "List of targets",
            "type": "array",
            "items": {
                "title": "Target point",
                "type": "object",
                "additionalProperties": false,
                "unevaluatedItems": false,
                "required": ["name", "prism", "height", "coords"],
                "properties": {
                    "name" : {
                        "title": "Point ID",
                        "type": "string"
                    },
                    "prism": {
                        "title": "Prism type",
                        "type": "string"
                    },
                    "height": {
                        "title": "Target height",
                        "type": "number"
                    },
                    "coords": {
                        "title": "Target coordinates",
                        "type": "array",
                        "items": {
                            "type": "number",
                            "unevaluatedItems": false
                        },
                        "minItems": 3,
                        "maxItems": 3
                    }
                }
            }
        }
    }
}
